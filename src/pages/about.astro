---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTASection from '../components/CTASection.astro';
import { Shield, Users, Award, Target, Building2, Landmark, ShoppingBag, Factory, Check, ArrowRight } from 'lucide-astro';

const sectors = [
  { name: "Banking and Finance", icon: "Landmark" },
  { name: "Government and Administration", icon: "Building2" },
  { name: "Retail and Hospitality", icon: "ShoppingBag" },
  { name: "Industry and Logistics", icon: "Factory" },
];

const iconMap: Record<string, any> = {
  Landmark,
  Building2,
  ShoppingBag,
  Factory,
};

const values = [
  {
    title: "Quality",
    description: "We deliver only the highest quality solutions using trusted brands and proven technologies.",
    icon: Award
  },
  {
    title: "Innovation",
    description: "We stay at the forefront of technology to bring you cutting-edge solutions.",
    icon: Target
  },
  {
    title: "Customer Focus",
    description: "Your needs drive everything we do. We tailor our solutions to meet your specific requirements.",
    icon: Users
  },
  {
    title: "Reliability",
    description: "Count on us for long-term support and dependable service you can trust.",
    icon: Shield
  },
];
---

<Layout
  title="About Us - OptimuxSolutions"
  description="Learn about OptimuxSolutions, a trusted provider of technology and security solutions in Equatorial Guinea."
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="relative py-24 md:py-32 overflow-hidden">
      <!-- Background -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-primary to-slate-900"></div>
      <div class="absolute inset-0 bg-pattern-shields opacity-20"></div>

      <!-- Decorative elements -->
      <div class="absolute top-0 right-0 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-primary/30 rounded-full blur-3xl"></div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 mb-6">
            <span class="w-2 h-2 bg-cyan-400 rounded-full"></span>
            <span class="text-sm font-medium" style="color: rgba(255,255,255,0.9);">About Us</span>
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight" style="color: white;">
            Your Trusted Technology Partner
          </h1>
          <p class="text-lg md:text-xl leading-relaxed" style="color: rgba(255,255,255,0.8);">
            Delivering innovative IT and security solutions to businesses across Equatorial Guinea since day one.
          </p>
        </div>
      </div>
    </section>

    <!-- About Content -->
    <section class="section-padding bg-white relative overflow-hidden">
      <!-- Decorative -->
      <div class="absolute top-1/2 -translate-y-1/2 right-0 w-96 h-96 bg-gradient-to-l from-primary/5 to-transparent rounded-full blur-3xl"></div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <!-- Logo -->
          <div class="relative">
            <div class="rounded-3xl overflow-hidden shadow-2xl shadow-slate-200/50 bg-gradient-to-br from-slate-50 to-white p-16 flex items-center justify-center">
              <img
                src="/logo.png"
                alt="OptimuxSolutions"
                class="w-full max-w-sm object-contain"
              />
            </div>
            <!-- Decorative element -->
            <div class="absolute -bottom-6 -right-6 w-48 h-48 bg-primary/10 rounded-3xl -z-10"></div>
            <div class="absolute -top-6 -left-6 w-32 h-32 bg-cyan-500/10 rounded-3xl -z-10"></div>
          </div>

          <!-- Content -->
          <div>
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
              <span class="w-2 h-2 bg-primary rounded-full"></span>
              <span class="text-sm font-semibold text-primary">Who We Are</span>
            </div>

            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
              Optimux Solutions
            </h2>
            <div class="space-y-4 text-slate-600 text-lg leading-relaxed">
              <p>
                <strong class="text-slate-900">Optimux Solutions</strong> is a company specialized in the integration of global technology solutions, combining IT, physical security, and digital transformation.
              </p>
              <p>
                We accompany businesses, institutions, and organizations at every stage of their projects, from needs analysis to integration, deployment, and maintenance of tailor-made solutions.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Mission, Vision, Objectives -->
    <section class="section-padding bg-slate-900 relative overflow-hidden">
      <div class="absolute inset-0 bg-pattern-shields opacity-10"></div>
      <div class="absolute top-0 right-0 w-96 h-96 bg-primary/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-cyan-500/10 rounded-full blur-3xl"></div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
          <!-- Mission -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-3xl p-8">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/20 mb-6">
              <span class="w-2 h-2 bg-primary rounded-full"></span>
              <span class="text-sm font-semibold text-primary">Mission</span>
            </div>
            <p class="text-white/80 text-lg leading-relaxed">
              Our mission is to provide reliable, high-performance, and secure technology solutions, enabling our clients to ensure business continuity, optimize their performance, and strengthen the protection of their physical and digital infrastructure.
            </p>
          </div>

          <!-- Vision -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-3xl p-8">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-cyan-500/20 mb-6">
              <span class="w-2 h-2 bg-cyan-400 rounded-full"></span>
              <span class="text-sm font-semibold text-cyan-400">Vision</span>
            </div>
            <p class="text-white/80 text-lg leading-relaxed">
              Our vision is to become a reference and leader in technology integration in Central Africa, recognized for our expertise, professionalism, and the quality of our integrated solutions.
            </p>
          </div>

          <!-- Objectives -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-3xl p-8">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-emerald-500/20 mb-6">
              <span class="w-2 h-2 bg-emerald-400 rounded-full"></span>
              <span class="text-sm font-semibold text-emerald-400">Objectives</span>
            </div>
            <ul class="text-white/80 text-lg leading-relaxed space-y-3">
              <li class="flex items-start gap-2">
                <Check class="w-5 h-5 text-emerald-400 mt-1 flex-shrink-0" />
                <span>Improve organizational security</span>
              </li>
              <li class="flex items-start gap-2">
                <Check class="w-5 h-5 text-emerald-400 mt-1 flex-shrink-0" />
                <span>Guarantee stable and scalable connectivity</span>
              </li>
              <li class="flex items-start gap-2">
                <Check class="w-5 h-5 text-emerald-400 mt-1 flex-shrink-0" />
                <span>Support digital transformation</span>
              </li>
              <li class="flex items-start gap-2">
                <Check class="w-5 h-5 text-emerald-400 mt-1 flex-shrink-0" />
                <span>Deliver excellent customer service</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Values -->
    <section class="section-padding bg-slate-50 bg-pattern-dots relative overflow-hidden">
      <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-bl from-primary/5 to-transparent rounded-full blur-3xl"></div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
            <span class="w-2 h-2 bg-primary rounded-full"></span>
            <span class="text-sm font-semibold text-primary">What We Stand For</span>
          </div>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
            Our Values
          </h2>
          <p class="text-slate-600 max-w-2xl mx-auto text-lg">
            The principles that guide everything we do
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {values.map((value, index) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-100 group">
              <div class="w-16 h-16 bg-primary/10 group-hover:bg-primary rounded-2xl flex items-center justify-center mb-6 transition-colors">
                <value.icon class="w-8 h-8 text-primary group-hover:text-white transition-colors" />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-3">{value.title}</h3>
              <p class="text-slate-600 leading-relaxed">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Sectors We Serve -->
    <section class="section-padding bg-white relative overflow-hidden">
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-cyan-500/5 to-transparent rounded-full blur-3xl"></div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
            <span class="w-2 h-2 bg-primary rounded-full"></span>
            <span class="text-sm font-semibold text-primary">Industries</span>
          </div>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
            Sectors We Serve
          </h2>
          <p class="text-slate-600 max-w-2xl mx-auto text-lg">
            We proudly serve a wide range of industries across Equatorial Guinea
          </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          {sectors.map((sector) => {
            const IconComponent = iconMap[sector.icon];
            return (
              <div class="bg-slate-50 hover:bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 text-center group border border-slate-100">
                <div class="w-20 h-20 bg-primary/10 group-hover:bg-primary rounded-2xl flex items-center justify-center mx-auto mb-6 transition-all">
                  <IconComponent class="w-10 h-10 text-primary group-hover:text-white transition-colors" />
                </div>
                <h3 class="font-bold text-slate-900">{sector.name}</h3>
              </div>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Our Satisfied Clients -->
    <section class="section-padding bg-slate-50 bg-pattern-curves relative overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
            <span class="w-2 h-2 bg-primary rounded-full"></span>
            <span class="text-sm font-semibold text-primary">Our Partners</span>
          </div>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
            Our Satisfied Clients
          </h2>
          <p class="text-slate-600 max-w-2xl mx-auto text-lg">
            Trusted by leading organizations across Equatorial Guinea
          </p>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-8 items-center">
          <div class="flex items-center justify-center p-6 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <img src="/images/clients/bgfi.webp" alt="BGFI" class="h-12 w-auto object-contain" />
          </div>
          <div class="flex items-center justify-center p-6 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <img src="/images/clients/cndes.webp" alt="CNDES" class="h-12 w-auto object-contain" />
          </div>
          <div class="flex items-center justify-center p-6 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <img src="/images/clients/deloite.png" alt="Deloitte" class="h-12 w-auto object-contain" />
          </div>
          <div class="flex items-center justify-center p-6 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <img src="/images/clients/ey.png" alt="EY" class="h-12 w-auto object-contain" />
          </div>
          <div class="flex items-center justify-center p-6 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <img src="/images/clients/inseso.webp" alt="INSESO" class="h-12 w-auto object-contain" />
          </div>
          <div class="flex items-center justify-center p-6 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <img src="/images/clients/simple star.png" alt="Simple Star" class="h-12 w-auto object-contain" />
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <CTASection
      title="Ready to Work Together?"
      subtitle="Contact us today to discuss how we can help transform your business with our technology solutions."
      buttonText="Get in Touch"
    />
  </main>

  <Footer />
</Layout>
