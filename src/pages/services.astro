---

<Layout
  title="Services - OptimuxSolutions"
  description="Complete and innovative IT solutions to support your digital transformation and optimize your performance."
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-950 via-blue-900 to-slate-900 py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6" style="color: white;">
            Our Services
          </h1>
          <p class="text-xl md:text-2xl text-blue-100 max-w-3xl mx-auto mb-10 leading-relaxed">
            Complete and innovative IT solutions to support your digital transformation and optimize your performance.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/contact"
              class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-700 hover:to-blue-900 text-white px-8 py-4 rounded-xl font-bold text-lg transition-all shadow-lg"
            >
              Get a Quote
              <ArrowRight class="w-5 h-5" />
            </a>
            <a
              href="#services"
              class="inline-flex items-center justify-center gap-2 bg-transparent border-2 border-white text-white hover:bg-white hover:text-blue-900 px-8 py-4 rounded-xl font-bold text-lg transition-all"
            >
              Explore Services
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Categories -->
    {allServices.map((category, categoryIndex) => (
      <section id={categoryIndex === 0 ? 'services' : undefined} class={categoryIndex % 2 === 0 ? 'py-24 bg-white' : 'py-24 bg-gradient-to-br from-slate-50 to-blue-50'}>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Category Header -->
          <div class="text-center mb-16">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-blue-600 to-blue-900 rounded-2xl mb-6 shadow-xl">
              <category.icon class="w-10 h-10 text-white" />
            </div>
            <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">{category.category}</h2>
            <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">{category.description}</p>
          </div>

          <!-- Category Image -->
          {category.image && (
            <div class="mb-12 rounded-2xl overflow-hidden shadow-2xl max-w-4xl mx-auto">
              <img src={category.image} alt={category.category} class="w-full h-80 object-cover" />
            </div>
          )}

          <!-- Services Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {category.services.map((service) => (
              <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-100 group">
                <div class="w-14 h-14 bg-gradient-to-br from-blue-100 to-blue-200 rounded-2xl flex items-center justify-center mb-6 group-hover:from-blue-600 group-hover:to-blue-900 transition-all">
                  <service.icon class="w-7 h-7 text-blue-700 group-hover:text-white transition-colors" />
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-blue-700 transition-colors">{service.title}</h3>
                <p class="text-slate-600 leading-relaxed mb-6">{service.description}</p>
                <ul class="space-y-2">
                  {service.features.map((feature) => (
                    <li class="flex items-center gap-2 text-sm text-slate-600">
                      <Check class="w-4 h-4 text-blue-600 flex-shrink-0" />
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </section>
    ))}

    <!-- CTA Section -->
    <CTASection
      title="Need a Custom Solution?"
      subtitle="We create custom solutions perfectly tailored to your specific needs and industry"
      buttonText="Contact Our Experts"
    />
  </main>

  <Footer />
</Layout>
