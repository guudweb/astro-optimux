---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Phone, Mail, MapPin, Clock, Send, ArrowRight } from 'lucide-astro';

const contactInfo = {
  phone: '+240 222 513 410',
  email: 'optimux@optimuxsolutions.com',
  address: 'Malabo II, Zona de Sampaka',
  city: 'Malabo, Equatorial Guinea',
  hours: 'Mon - Fri: 8:00 AM - 6:00 PM'
};
---

<Layout
  title="Contact Us - OptimuxSolutions"
  description="Get in touch with OptimuxSolutions for IT solutions, video surveillance, access control and technology services."
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="relative py-24 md:py-32 overflow-hidden">
      <!-- Background -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-primary to-slate-900"></div>
      <div class="absolute inset-0 bg-pattern-tech opacity-20"></div>

      <!-- Decorative elements -->
      <div class="absolute top-0 right-0 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-primary/30 rounded-full blur-3xl"></div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 mb-6">
            <span class="w-2 h-2 bg-cyan-400 rounded-full"></span>
            <span class="text-sm font-medium" style="color: rgba(255,255,255,0.9);">Get in Touch</span>
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight" style="color: white;">
            Contact Us
          </h1>
          <p class="text-lg md:text-xl leading-relaxed" style="color: rgba(255,255,255,0.8);">
            Have a question or need a quote? We're here to help. Reach out and let's discuss how we can transform your business.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="section-padding bg-slate-50 bg-pattern-dots relative overflow-hidden">
      <!-- Decorative -->
      <div class="absolute top-1/4 right-0 w-96 h-96 bg-gradient-to-l from-primary/5 to-transparent rounded-full blur-3xl"></div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">

          <!-- Contact Form -->
          <div class="lg:col-span-3">
            <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 p-8 md:p-10 border border-slate-100">
              <div class="flex items-center gap-4 mb-8">
                <div class="w-12 h-12 bg-primary/10 rounded-2xl flex items-center justify-center">
                  <Send class="w-6 h-6 text-primary" />
                </div>
                <div>
                  <h2 class="text-2xl font-bold text-slate-900">Send us a message</h2>
                  <p class="text-slate-500 text-sm">We'll get back to you within 24 hours</p>
                </div>
              </div>

              <form id="contact-form" class="space-y-6">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                  <div>
                    <label for="name" class="block text-sm font-semibold text-slate-700 mb-2">
                      Full Name *
                    </label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      required
                      class="w-full px-4 py-3.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary focus:bg-white transition-all placeholder:text-slate-400"
                      placeholder="John Doe"
                    />
                  </div>
                  <div>
                    <label for="email" class="block text-sm font-semibold text-slate-700 mb-2">
                      Email *
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      class="w-full px-4 py-3.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary focus:bg-white transition-all placeholder:text-slate-400"
                      placeholder="john@example.com"
                    />
                  </div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                  <div>
                    <label for="phone" class="block text-sm font-semibold text-slate-700 mb-2">
                      Phone
                    </label>
                    <input
                      type="tel"
                      id="phone"
                      name="phone"
                      class="w-full px-4 py-3.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary focus:bg-white transition-all placeholder:text-slate-400"
                      placeholder="+240 XXX XXX XXX"
                    />
                  </div>
                  <div>
                    <label for="company" class="block text-sm font-semibold text-slate-700 mb-2">
                      Company
                    </label>
                    <input
                      type="text"
                      id="company"
                      name="company"
                      class="w-full px-4 py-3.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary focus:bg-white transition-all placeholder:text-slate-400"
                      placeholder="Your Company"
                    />
                  </div>
                </div>

                <div>
                  <label for="service" class="block text-sm font-semibold text-slate-700 mb-2">
                    Service of Interest
                  </label>
                  <select
                    id="service"
                    name="service"
                    class="w-full px-4 py-3.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary focus:bg-white transition-all text-slate-700"
                  >
                    <option value="">Select a service</option>
                    <option value="cctv">CCTV Video Surveillance</option>
                    <option value="alarm">Alarm & Fire Systems</option>
                    <option value="access">Access Control</option>
                    <option value="servers">Servers & Networks</option>
                    <option value="maintenance">IT Maintenance</option>
                    <option value="telecom">Telecommunications</option>
                    <option value="cash-handling">Cash Handling Solutions</option>
                    <option value="printing">Printing Equipment Leasing</option>
                    <option value="other">Other</option>
                  </select>
                </div>

                <div>
                  <label for="message" class="block text-sm font-semibold text-slate-700 mb-2">
                    Message *
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    rows="5"
                    required
                    class="w-full px-4 py-3.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary focus:bg-white transition-all resize-none placeholder:text-slate-400"
                    placeholder="Tell us about your project or inquiry..."
                  ></textarea>
                </div>

                <button
                  type="submit"
                  class="w-full inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white px-8 py-4 rounded-xl font-bold text-lg transition-all shadow-lg shadow-primary/20 hover:shadow-xl hover:shadow-primary/30 group"
                >
                  Send Message
                  <ArrowRight class="w-5 h-5 transition-transform group-hover:translate-x-1" />
                </button>
              </form>
            </div>
          </div>

          <!-- Contact Info -->
          <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 p-8 border border-slate-100">
              <h2 class="text-xl font-bold text-slate-900 mb-6">Contact Information</h2>

              <div class="space-y-6">
                <!-- Phone -->
                <a href={`tel:${contactInfo.phone}`} class="flex items-center gap-4 group">
                  <div class="w-12 h-12 bg-primary/10 group-hover:bg-primary rounded-2xl flex items-center justify-center transition-colors">
                    <Phone class="w-6 h-6 text-primary group-hover:text-white transition-colors" />
                  </div>
                  <div>
                    <p class="text-xs text-slate-400 uppercase tracking-wider font-medium">Phone</p>
                    <p class="text-slate-900 font-semibold group-hover:text-primary transition-colors">{contactInfo.phone}</p>
                  </div>
                </a>

                <!-- Email -->
                <a href={`mailto:${contactInfo.email}`} class="flex items-center gap-4 group">
                  <div class="w-12 h-12 bg-primary/10 group-hover:bg-primary rounded-2xl flex items-center justify-center transition-colors">
                    <Mail class="w-6 h-6 text-primary group-hover:text-white transition-colors" />
                  </div>
                  <div>
                    <p class="text-xs text-slate-400 uppercase tracking-wider font-medium">Email</p>
                    <p class="text-slate-900 font-semibold group-hover:text-primary transition-colors">{contactInfo.email}</p>
                  </div>
                </a>

                <!-- Address -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-primary/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                    <MapPin class="w-6 h-6 text-primary" />
                  </div>
                  <div>
                    <p class="text-xs text-slate-400 uppercase tracking-wider font-medium">Address</p>
                    <p class="text-slate-900 font-semibold">
                      {contactInfo.address}<br />
                      {contactInfo.city}
                    </p>
                  </div>
                </div>

                <!-- Hours -->
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 bg-primary/10 rounded-2xl flex items-center justify-center">
                    <Clock class="w-6 h-6 text-primary" />
                  </div>
                  <div>
                    <p class="text-xs text-slate-400 uppercase tracking-wider font-medium">Business Hours</p>
                    <p class="text-slate-900 font-semibold">{contactInfo.hours}</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Map -->
            <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 overflow-hidden border border-slate-100">
              <div class="h-64">
                <iframe
                  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31915.73546455!2d8.7439!3d3.7504!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1067c5a7b7e1e3b9%3A0x5a9b5a9b5a9b5a9b!2sMalabo%2C%20Equatorial%20Guinea!5e0!3m2!1sen!2s!4v1234567890"
                  width="100%"
                  height="100%"
                  style="border:0;"
                  allowfullscreen=""
                  loading="lazy"
                ></iframe>
              </div>
            </div>

            <!-- Quick Response Card -->
            <div class="bg-gradient-to-br from-primary to-slate-900 rounded-3xl p-8 text-white relative overflow-hidden">
              <div class="absolute inset-0 bg-pattern-shields opacity-10"></div>
              <div class="relative">
                <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mb-4">
                  <Clock class="w-6 h-6 text-white" />
                </div>
                <h3 class="text-xl font-bold mb-2">Quick Response</h3>
                <p class="text-white/80 text-sm leading-relaxed">
                  Our team typically responds within 24 hours. For urgent inquiries, please call us directly.
                </p>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;

  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    // Get form data
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    // Here you would typically send the data to your backend
    console.log('Form submitted:', data);

    // Show success message
    alert('Thank you for your message! We will get back to you soon.');
    form.reset();
  });
</script>
