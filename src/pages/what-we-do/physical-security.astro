---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import RecentProjects from '../../components/RecentProjects.astro';
import CTASection from '../../components/CTASection.astro';
import { Shield, Check, ArrowRight, Camera, DoorOpen, Bell, Flame, Lock, Eye } from 'lucide-astro';

const features = [
  {
    icon: Camera,
    title: "Video Surveillance",
    description: "HD and 4K CCTV systems with remote monitoring and smart analytics."
  },
  {
    icon: DoorOpen,
    title: "Access Control",
    description: "Biometric, RFID, and smart card systems for secure entry management."
  },
  {
    icon: Flame,
    title: "Fire Detection",
    description: "Early warning fire detection and alarm systems for maximum safety."
  },
  {
    icon: Bell,
    title: "Intrusion Alarms",
    description: "Advanced alarm systems with 24/7 monitoring and instant alerts."
  },
  {
    icon: Lock,
    title: "Electronic Locks",
    description: "Smart locks and electronic security for doors and entry points."
  },
  {
    icon: Eye,
    title: "Remote Monitoring",
    description: "Real-time surveillance from anywhere with mobile and web access."
  }
];

const services = [
  "CCTV camera installation",
  "Biometric access systems",
  "Fire alarm integration",
  "Intrusion detection systems",
  "Video analytics & AI",
  "Central monitoring station",
  "Security system maintenance",
  "Emergency response systems"
];

const industries = [
  { title: "Commercial Buildings", description: "Complete security solutions for offices and retail spaces" },
  { title: "Industrial Facilities", description: "High-security systems for factories and warehouses" },
  { title: "Government & Public", description: "Certified security for government buildings and public spaces" },
  { title: "Residential Complexes", description: "Smart security for apartments and gated communities" }
];
---

<Layout
  title="Physical Security - OptimuxSolutions"
  description="Video surveillance, access control, alarm and fire systems to strengthen the protection of your physical infrastructure."
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="relative py-20 md:py-28 overflow-hidden">
      <div class="absolute inset-0 bg-[#1c6cb1]">
        <div class="absolute inset-0">
          <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice">
            <defs>
              <pattern id="hero-grid" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
                <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#ffffff" stroke-width="0.5" opacity="0.1"/>
              </pattern>
              <pattern id="hero-dots" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                <circle cx="2" cy="2" r="1" fill="#ffffff" opacity="0.15"/>
              </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#hero-grid)"/>
            <rect width="100%" height="100%" fill="url(#hero-dots)"/>
          </svg>
        </div>
      </div>

      <div class="absolute top-0 right-0 w-96 h-96 bg-[#5a9fd4]/30 rounded-full blur-[120px]"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-[#155a94]/50 rounded-full blur-[100px]"></div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <a href="/" class="inline-flex items-center gap-2 text-white/80 hover:text-white mb-6 transition-colors">
              <ArrowRight class="w-4 h-4 rotate-180" />
              <span class="text-sm font-medium">Back to Home</span>
            </a>

            <div class="flex items-center gap-4 mb-6">
              <div class="w-16 h-16 bg-white/10 backdrop-blur-sm rounded-2xl flex items-center justify-center">
                <Shield class="w-8 h-8 text-white" />
              </div>
              <div class="h-px bg-white/20 flex-1"></div>
            </div>

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight" style="color: white;">
              Physical Security<br/>Solutions
            </h1>
            <p class="text-lg md:text-xl leading-relaxed mb-8" style="color: rgba(255,255,255,0.85);">
              Video surveillance, access control, alarm and fire systems to strengthen the protection of your physical infrastructure. Comprehensive security tailored to your needs.
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/contact"
                class="inline-flex items-center justify-center gap-2 bg-white hover:bg-white/90 text-[#1c6cb1] px-8 py-4 rounded-xl font-bold text-lg transition-all shadow-lg"
              >
                Get a Quote
                <ArrowRight class="w-5 h-5" />
              </a>
              <a
                href="#features"
                class="inline-flex items-center justify-center gap-2 bg-white/15 hover:bg-white/25 backdrop-blur-sm border border-white/30 px-8 py-4 rounded-xl font-bold text-lg transition-all"
                style="color: white;"
              >
                Learn More
              </a>
            </div>
          </div>

          <div class="relative">
            <div class="aspect-[4/3] rounded-3xl overflow-hidden">
              <img
                src="/images/cctv.webp"
                alt="Physical Security"
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-[#1c6cb1]/60 via-transparent to-transparent"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section id="features" class="section-padding bg-slate-50 bg-pattern-curves">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
            <span class="w-2 h-2 rounded-full bg-primary"></span>
            <span class="text-sm font-semibold text-primary">Security Systems</span>
          </div>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
            Complete Protection
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            From surveillance to access control, we provide integrated security solutions for complete peace of mind.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {features.map((feature) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg shadow-slate-200/50 hover:shadow-xl hover:shadow-slate-200/50 transition-all duration-300 group">
              <div class="w-14 h-14 bg-primary/10 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-primary group-hover:scale-110 transition-all">
                <feature.icon class="w-7 h-7 text-primary group-hover:text-white transition-colors" />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-3">{feature.title}</h3>
              <p class="text-slate-600 leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Services & Industries -->
    <section class="section-padding bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <div>
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
              <span class="w-2 h-2 rounded-full bg-primary"></span>
              <span class="text-sm font-semibold text-primary">Services</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              Our Security Services
            </h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {services.map((service) => (
                <div class="flex items-center gap-3 p-4 bg-slate-50 rounded-xl">
                  <div class="w-8 h-8 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                    <Check class="w-5 h-5 text-primary" />
                  </div>
                  <span class="text-slate-700 font-medium">{service}</span>
                </div>
              ))}
            </div>
          </div>

          <div>
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
              <span class="w-2 h-2 rounded-full bg-primary"></span>
              <span class="text-sm font-semibold text-primary">Industries</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              Who We Protect
            </h2>

            <div class="space-y-4">
              {industries.map((industry) => (
                <div class="p-6 bg-slate-50 rounded-2xl hover:shadow-md transition-shadow">
                  <h3 class="text-lg font-bold text-slate-900 mb-2">{industry.title}</h3>
                  <p class="text-slate-600">{industry.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Projects -->
    <RecentProjects category="cctv" />

    <!-- CTA Section -->
    <CTASection
      title="Secure Your Premises Today"
      subtitle="Contact us for a free security assessment and discover how we can protect your facilities."
      buttonText="Get in Touch"
    />
  </main>

  <Footer />
</Layout>
