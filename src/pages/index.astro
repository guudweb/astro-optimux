---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Footer from '../components/Footer.astro';
import { getServiciosDestacados } from '../lib/strapi';

const servicios = await getServiciosDestacados();
---

<Layout title="OptimuxSolutions 1 - Soluciones IT Profesionales">
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <Hero
      title="Soluciones IT para tu empresa"
      subtitle="Optimize today, perform tomorrow"
      description="Ofrecemos servicios IT profesionales para empresas que buscan optimizar su infraestructura tecnológica y mejorar su rendimiento."
    />

    <!-- Featured Services Section -->
    <section class="py-16 bg-background-alt">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-text-dark mb-4">
            Nuestros Servicios
          </h2>
          <p class="text-text-gray max-w-2xl mx-auto">
            Soluciones integrales de tecnología para cubrir todas las necesidades de tu empresa.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {servicios.map((servicio) => (
            <ServiceCard
              titulo={servicio.titulo}
              descripcion={servicio.descripcion}
              icono={servicio.icono}
            />
          ))}
        </div>

        <div class="text-center mt-8">
          <a
            href="/servicios"
            class="inline-flex items-center text-primary font-medium hover:underline"
          >
            Ver todos los servicios
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <ContactCTA />
  </main>

  <Footer />
</Layout>
