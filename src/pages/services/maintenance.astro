---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import RecentProjects from '../../components/RecentProjects.astro';
import { Wrench, Check, ArrowRight, Monitor, RefreshCw, Headphones, Gauge, ShieldCheck, Clock } from 'lucide-astro';

const features = [
  {
    icon: Monitor,
    title: "Preventive Maintenance",
    description: "Regular system checks and updates to prevent issues before they occur."
  },
  {
    icon: Headphones,
    title: "Technical Support",
    description: "Expert assistance for all your IT issues via phone, email, or on-site."
  },
  {
    icon: RefreshCw,
    title: "System Updates",
    description: "Keep your software and firmware current with managed update schedules."
  },
  {
    icon: Gauge,
    title: "Performance Optimization",
    description: "Fine-tune your systems for maximum speed and efficiency."
  },
  {
    icon: ShieldCheck,
    title: "Security Patches",
    description: "Timely security updates to protect against vulnerabilities."
  },
  {
    icon: Clock,
    title: "24/7 Monitoring",
    description: "Round-the-clock system monitoring with proactive alerts."
  }
];

const specifications = [
  "Hardware diagnostics",
  "Software troubleshooting",
  "Antivirus management",
  "Disk cleanup & optimization",
  "Driver updates",
  "Network maintenance",
  "Printer support",
  "Data backup verification"
];

const applications = [
  { title: "Office IT Support", description: "Complete maintenance for workstations and office equipment" },
  { title: "Server Management", description: "Ongoing maintenance for critical server infrastructure" },
  { title: "Network Maintenance", description: "Keep your network running at peak performance" },
  { title: "Help Desk Services", description: "Dedicated support for your employees' IT needs" }
];

const plans = [
  {
    name: "Basic",
    description: "Essential maintenance for small businesses",
    features: ["Monthly system checks", "Remote support", "Software updates", "Email support"]
  },
  {
    name: "Professional",
    description: "Comprehensive support for growing companies",
    features: ["Weekly maintenance", "Priority support", "On-site visits", "24/7 monitoring", "Hardware support"]
  },
  {
    name: "Enterprise",
    description: "Full-service IT management",
    features: ["Daily monitoring", "Dedicated technician", "Unlimited support", "SLA guarantee", "Strategic planning"]
  }
];
---

<Layout
  title="IT Maintenance - OptimuxSolutions"
  description="Professional IT maintenance services. Preventive maintenance, technical support, system updates and performance optimization."
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="relative py-20 md:py-28 overflow-hidden">
      <div class="absolute inset-0 bg-[#1c6cb1]">
        <div class="absolute inset-0">
          <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice">
            <defs>
              <pattern id="hero-grid" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
                <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#ffffff" stroke-width="0.5" opacity="0.1"/>
              </pattern>
              <pattern id="hero-dots" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                <circle cx="2" cy="2" r="1" fill="#ffffff" opacity="0.15"/>
              </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#hero-grid)"/>
            <rect width="100%" height="100%" fill="url(#hero-dots)"/>
          </svg>
        </div>
      </div>

      <div class="absolute top-0 right-0 w-96 h-96 bg-[#5a9fd4]/30 rounded-full blur-[120px]"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-[#155a94]/50 rounded-full blur-[100px]"></div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <a href="/services" class="inline-flex items-center gap-2 text-white/80 hover:text-white mb-6 transition-colors">
              <ArrowRight class="w-4 h-4 rotate-180" />
              <span class="text-sm font-medium">Back to Services</span>
            </a>

            <div class="flex items-center gap-4 mb-6">
              <div class="w-16 h-16 bg-white/10 backdrop-blur-sm rounded-2xl flex items-center justify-center">
                <Wrench class="w-8 h-8 text-white" />
              </div>
              <div class="h-px bg-white/20 flex-1"></div>
            </div>

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight" style="color: white;">
              IT<br/>Maintenance
            </h1>
            <p class="text-lg md:text-xl leading-relaxed mb-8" style="color: rgba(255,255,255,0.85);">
              Keep your IT infrastructure running smoothly with our comprehensive maintenance services. Prevent downtime and maximize productivity with proactive support.
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/contact"
                class="inline-flex items-center justify-center gap-2 bg-white hover:bg-white/90 text-[#1c6cb1] px-8 py-4 rounded-xl font-bold text-lg transition-all shadow-lg"
              >
                Get a Quote
                <ArrowRight class="w-5 h-5" />
              </a>
              <a
                href="#features"
                class="inline-flex items-center justify-center gap-2 bg-white/15 hover:bg-white/25 backdrop-blur-sm border border-white/30 px-8 py-4 rounded-xl font-bold text-lg transition-all"
                style="color: white;"
              >
                Learn More
              </a>
            </div>
          </div>

          <div class="relative">
            <div class="aspect-[4/3] rounded-3xl overflow-hidden bg-white/10 backdrop-blur-sm border border-white/20">
              <svg class="w-full h-full" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
                <defs>
                  <pattern id="maint-grid" width="20" height="20" patternUnits="userSpaceOnUse">
                    <path d="M 20 0 L 0 0 0 20" fill="none" stroke="#ffffff" stroke-width="0.5" opacity="0.1"/>
                  </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#maint-grid)"/>

                <!-- Tools Icon -->
                <g transform="translate(140, 70)">
                  <!-- Wrench -->
                  <path d="M30 90 L80 40 L95 55 L45 105 Z" fill="#ffffff" opacity="0.2" stroke="#ffffff" stroke-width="2" opacity="0.3"/>
                  <!-- Screwdriver -->
                  <path d="M90 110 L110 90 L95 75 L75 95 Z" fill="#ffffff" opacity="0.15"/>
                  <rect x="70" y="95" width="8" height="50" rx="2" fill="#ffffff" opacity="0.2" transform="rotate(45 74 120)"/>

                  <!-- Gear -->
                  <circle cx="50" cy="70" r="25" fill="none" stroke="#ffffff" stroke-width="3" opacity="0.25"/>
                  <circle cx="50" cy="70" r="12" fill="#ffffff" opacity="0.15"/>
                  <!-- Gear teeth -->
                  <rect x="48" y="40" width="4" height="10" fill="#ffffff" opacity="0.2"/>
                  <rect x="48" y="90" width="4" height="10" fill="#ffffff" opacity="0.2"/>
                  <rect x="20" y="68" width="10" height="4" fill="#ffffff" opacity="0.2"/>
                  <rect x="70" y="68" width="10" height="4" fill="#ffffff" opacity="0.2"/>
                </g>

                <circle cx="80" cy="80" r="30" fill="#22c55e" opacity="0.2"/>
                <circle cx="320" cy="220" r="50" fill="#ffffff" opacity="0.1"/>

                <!-- Status indicator -->
                <circle cx="350" cy="40" r="6" fill="#22c55e" opacity="0.8"/>
                <text x="295" y="45" fill="#ffffff" opacity="0.6" font-size="11" font-family="sans-serif">ALL SYSTEMS OK</text>
              </svg>

              <div class="absolute bottom-6 left-6 right-6 flex gap-4">
                <div class="bg-white/95 backdrop-blur-sm rounded-xl px-4 py-3 shadow-lg flex-1">
                  <p class="text-2xl font-bold text-[#1c6cb1]">99%</p>
                  <p class="text-xs text-slate-600">Uptime</p>
                </div>
                <div class="bg-white/95 backdrop-blur-sm rounded-xl px-4 py-3 shadow-lg flex-1">
                  <p class="text-2xl font-bold text-[#1c6cb1]">&lt;2h</p>
                  <p class="text-xs text-slate-600">Response</p>
                </div>
                <div class="bg-white/95 backdrop-blur-sm rounded-xl px-4 py-3 shadow-lg flex-1">
                  <p class="text-2xl font-bold text-[#1c6cb1]">24/7</p>
                  <p class="text-xs text-slate-600">Support</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section id="features" class="section-padding bg-slate-50 bg-pattern-curves">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
            <span class="w-2 h-2 rounded-full bg-primary"></span>
            <span class="text-sm font-semibold text-primary">Features</span>
          </div>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
            Comprehensive IT Support
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            Our maintenance services ensure your technology works for you, not against you.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {features.map((feature) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg shadow-slate-200/50 hover:shadow-xl hover:shadow-slate-200/50 transition-all duration-300 group">
              <div class="w-14 h-14 bg-primary/10 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-primary group-hover:scale-110 transition-all">
                <feature.icon class="w-7 h-7 text-primary group-hover:text-white transition-colors" />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-3">{feature.title}</h3>
              <p class="text-slate-600 leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Service Plans -->
    <section class="section-padding bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
            <span class="w-2 h-2 rounded-full bg-primary"></span>
            <span class="text-sm font-semibold text-primary">Service Plans</span>
          </div>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
            Choose Your Plan
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            Flexible maintenance plans tailored to your business needs and budget.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {plans.map((plan, index) => (
            <div class={`rounded-2xl p-8 ${index === 1 ? 'bg-primary text-white shadow-xl shadow-primary/30 scale-105' : 'bg-slate-50'}`}>
              <h3 class={`text-2xl font-bold mb-2 ${index === 1 ? 'text-white' : 'text-slate-900'}`}>{plan.name}</h3>
              <p class={`mb-6 ${index === 1 ? 'text-white/80' : 'text-slate-600'}`}>{plan.description}</p>

              <ul class="space-y-3 mb-8">
                {plan.features.map((feature) => (
                  <li class="flex items-center gap-3">
                    <div class={`w-5 h-5 rounded-full flex items-center justify-center ${index === 1 ? 'bg-white/20' : 'bg-primary/10'}`}>
                      <Check class={`w-3 h-3 ${index === 1 ? 'text-white' : 'text-primary'}`} />
                    </div>
                    <span class={index === 1 ? 'text-white/90' : 'text-slate-700'}>{feature}</span>
                  </li>
                ))}
              </ul>

              <a
                href="/contact"
                class={`block text-center py-3 rounded-xl font-bold transition-all ${
                  index === 1
                    ? 'bg-white text-primary hover:bg-white/90'
                    : 'bg-primary text-white hover:bg-primary-dark'
                }`}
              >
                Get Started
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Specifications & Applications -->
    <section class="section-padding bg-slate-50 bg-pattern-dots">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <div>
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
              <span class="w-2 h-2 rounded-full bg-primary"></span>
              <span class="text-sm font-semibold text-primary">Services</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              What's Included
            </h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {specifications.map((spec) => (
                <div class="flex items-center gap-3 p-4 bg-white rounded-xl shadow-sm">
                  <div class="w-8 h-8 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                    <Check class="w-5 h-5 text-primary" />
                  </div>
                  <span class="text-slate-700 font-medium">{spec}</span>
                </div>
              ))}
            </div>
          </div>

          <div>
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
              <span class="w-2 h-2 rounded-full bg-primary"></span>
              <span class="text-sm font-semibold text-primary">Applications</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              Support Areas
            </h2>

            <div class="space-y-4">
              {applications.map((app) => (
                <div class="p-6 bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow">
                  <h3 class="text-lg font-bold text-slate-900 mb-2">{app.title}</h3>
                  <p class="text-slate-600">{app.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Projects -->
    <RecentProjects category="maintenance" />

    <!-- CTA Section -->
    <section class="section-padding bg-[#1c6cb1] relative overflow-hidden">
      <div class="absolute inset-0 bg-pattern-shields opacity-10"></div>
      <div class="absolute top-0 right-0 w-96 h-96 bg-[#5a9fd4]/30 rounded-full blur-[120px]"></div>

      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6" style="color: white;">
          Keep Your Systems Running
        </h2>
        <p class="text-lg mb-8 max-w-2xl mx-auto" style="color: rgba(255,255,255,0.85);">
          Contact us to discuss a maintenance plan that fits your business needs and budget.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 bg-white hover:bg-white/90 text-[#1c6cb1] px-8 py-4 rounded-xl font-bold text-lg transition-all shadow-lg group"
        >
          Contact Us Today
          <ArrowRight class="w-5 h-5 transition-transform group-hover:translate-x-1" />
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
