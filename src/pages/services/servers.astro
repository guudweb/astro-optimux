---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import RecentProjects from '../../components/RecentProjects.astro';
import { Server, Check, ArrowRight, Database, Network, Cloud, Shield, HardDrive, Cpu } from 'lucide-astro';

const features = [
  {
    icon: Database,
    title: "Server Installation",
    description: "Enterprise-grade server deployment and configuration for any scale."
  },
  {
    icon: Network,
    title: "Network Design",
    description: "Custom network architecture optimized for performance and security."
  },
  {
    icon: Cloud,
    title: "Cloud Integration",
    description: "Seamless hybrid cloud solutions connecting on-premise and cloud."
  },
  {
    icon: Shield,
    title: "Security Hardening",
    description: "Comprehensive security measures to protect your infrastructure."
  },
  {
    icon: HardDrive,
    title: "Backup Solutions",
    description: "Automated backup systems ensuring data protection and recovery."
  },
  {
    icon: Cpu,
    title: "Virtualization",
    description: "VM infrastructure for efficient resource utilization."
  }
];

const specifications = [
  "Rack server installation",
  "Storage area networks (SAN)",
  "Network attached storage (NAS)",
  "Firewall configuration",
  "VPN setup",
  "Load balancing",
  "Redundancy systems",
  "Disaster recovery planning"
];

const applications = [
  { title: "Enterprise Data Centers", description: "Full-scale server room design and deployment" },
  { title: "Small Business Networks", description: "Cost-effective solutions for growing companies" },
  { title: "Remote Office Connectivity", description: "Secure connections between multiple locations" },
  { title: "Cloud Migration", description: "Smooth transition from on-premise to cloud infrastructure" }
];
---

<Layout
  title="Servers & Networks - OptimuxSolutions"
  description="Professional server installation, network design and cloud integration services. Enterprise-grade infrastructure solutions."
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-950 via-blue-900 to-slate-900 py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <a href="/services" class="inline-flex items-center gap-2 text-blue-200 hover:text-white mb-6 transition-colors">
              <ArrowRight class="w-4 h-4 rotate-180" />
              <span class="text-sm font-medium">Back to Services</span>
            </a>

            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-blue-600 to-blue-900 rounded-2xl mb-6 shadow-xl">
              <Server class="w-10 h-10 text-white" />
            </div>

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight" style="color: white;">
              Servers & Networks
            </h1>
            <p class="text-xl leading-relaxed mb-8" style="color: rgba(191, 219, 254, 1);">
              Build a robust IT foundation with enterprise-grade servers, secure network infrastructure, and seamless cloud integration for your business.
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/contact"
                class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-700 hover:to-blue-900 text-white px-8 py-4 rounded-xl font-bold text-lg transition-all shadow-lg"
              >
                Get a Quote
                <ArrowRight class="w-5 h-5" />
              </a>
              <a
                href="#features"
                class="inline-flex items-center justify-center gap-2 bg-transparent border-2 border-white text-white hover:bg-white hover:text-blue-900 px-8 py-4 rounded-xl font-bold text-lg transition-all"
              >
                Learn More
              </a>
            </div>
          </div>

          <div class="relative">
            <div class="rounded-2xl overflow-hidden shadow-2xl">
              <img src="/images/it-infrastructure.png" alt="Servers & Networks" class="w-full h-80 object-cover" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section id="features" class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
            Enterprise Infrastructure Solutions
          </h2>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
            Our server and network solutions are designed for performance, reliability, and scalability.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {features.map((feature) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-100 group">
              <div class="w-14 h-14 bg-gradient-to-br from-blue-100 to-blue-200 rounded-2xl flex items-center justify-center mb-6 group-hover:from-blue-600 group-hover:to-blue-900 transition-all">
                <feature.icon class="w-7 h-7 text-blue-700 group-hover:text-white transition-colors" />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-blue-700 transition-colors">{feature.title}</h3>
              <p class="text-slate-600 leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Specifications & Applications -->
    <section class="py-24 bg-gradient-to-br from-slate-50 to-blue-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              What We Provide
            </h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {specifications.map((spec) => (
                <div class="flex items-center gap-3 p-4 bg-white rounded-xl shadow-sm">
                  <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <Check class="w-5 h-5 text-blue-600" />
                  </div>
                  <span class="text-slate-700 font-medium">{spec}</span>
                </div>
              ))}
            </div>
          </div>

          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              Solutions For
            </h2>

            <div class="space-y-4">
              {applications.map((app) => (
                <div class="p-6 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-shadow">
                  <h3 class="text-lg font-bold text-slate-900 mb-2">{app.title}</h3>
                  <p class="text-slate-600">{app.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
            How We Work
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          {[
            { step: "01", title: "Discovery", desc: "Assess current infrastructure and requirements" },
            { step: "02", title: "Architecture", desc: "Design scalable network and server topology" },
            { step: "03", title: "Implementation", desc: "Deploy and configure all systems" },
            { step: "04", title: "Optimize", desc: "Performance tuning and ongoing management" }
          ].map((item, index) => (
            <div class="relative">
              <div class="bg-white rounded-2xl p-8 shadow-lg border border-slate-100 text-center relative z-10 hover:shadow-xl transition-shadow">
                <div class="text-5xl font-black text-blue-100 mb-4">{item.step}</div>
                <h3 class="text-xl font-bold text-slate-900 mb-2">{item.title}</h3>
                <p class="text-slate-600 text-sm">{item.desc}</p>
              </div>
              {index < 3 && (
                <div class="hidden md:block absolute top-1/2 -right-4 w-8 h-0.5 bg-blue-200 z-0"></div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Recent Projects -->
    <RecentProjects category="servers" />

    <!-- CTA Section -->
    <section class="py-24 bg-gradient-to-r from-blue-700 via-blue-800 to-blue-900 text-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml;base64,');"></div>
      </div>

      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <h2 class="text-4xl md:text-5xl font-bold mb-6" style="color: white;">Build Your IT Infrastructure</h2>
        <p class="text-xl mb-10 text-blue-100 leading-relaxed">
          Contact our infrastructure experts to design and deploy a robust server and network solution for your business.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 bg-white text-blue-900 hover:bg-blue-50 px-10 py-5 text-lg font-bold rounded-xl shadow-2xl hover:shadow-white/30 transition-all group"
        >
          Contact Us Today
          <ArrowRight class="w-5 h-5 group-hover:translate-x-1 transition-transform" />
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
