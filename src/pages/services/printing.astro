---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import RecentProjects from '../../components/RecentProjects.astro';
import { Printer, Check, ArrowRight, FileText, Settings, Clock, Leaf, Headphones, Calculator } from 'lucide-astro';

const features = [
  {
    icon: Calculator,
    title: "No Upfront Investment",
    description: "Get premium printing equipment without large capital expenditure."
  },
  {
    icon: Settings,
    title: "Maintenance Included",
    description: "All repairs, parts, and servicing covered in your lease agreement."
  },
  {
    icon: Clock,
    title: "Latest Technology",
    description: "Upgrade to newer models as technology advances during your lease."
  },
  {
    icon: FileText,
    title: "Flexible Terms",
    description: "Customizable lease periods from 12 to 60 months to fit your needs."
  },
  {
    icon: Leaf,
    title: "Eco-Friendly Options",
    description: "Energy-efficient models and recycling programs available."
  },
  {
    icon: Headphones,
    title: "Dedicated Support",
    description: "Priority technical support and quick response times."
  }
];

const specifications = [
  "Multifunction printers (MFP)",
  "Color laser printers",
  "High-volume production printers",
  "Wide format printers",
  "Document scanners",
  "Copiers",
  "Toner & supplies included",
  "Fleet management software"
];

const applications = [
  { title: "Corporate Offices", description: "Departmental and workgroup printing solutions" },
  { title: "Print Shops", description: "High-volume production equipment for commercial printing" },
  { title: "Educational Institutions", description: "Campus-wide printing and copying services" },
  { title: "Healthcare Facilities", description: "Secure document handling and patient records" }
];

const plans = [
  {
    name: "Starter",
    description: "Perfect for small offices",
    features: ["Desktop printer", "Up to 5,000 pages/month", "Basic maintenance", "Email support"]
  },
  {
    name: "Business",
    description: "Ideal for growing companies",
    features: ["Multifunction printer", "Up to 20,000 pages/month", "Full maintenance", "Priority support", "Toner included"]
  },
  {
    name: "Enterprise",
    description: "For high-volume needs",
    features: ["Production printer", "Unlimited pages", "Same-day service", "Dedicated account manager", "Fleet management"]
  }
];
---

<Layout
  title="Printing Equipment Leasing - OptimuxSolutions"
  description="Professional printing equipment leasing services. Multifunction printers, copiers, and production equipment with maintenance included."
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-950 via-blue-900 to-slate-900 py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <a href="/services" class="inline-flex items-center gap-2 text-blue-200 hover:text-white mb-6 transition-colors">
              <ArrowRight class="w-4 h-4 rotate-180" />
              <span class="text-sm font-medium">Back to Services</span>
            </a>

            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-blue-600 to-blue-900 rounded-2xl mb-6 shadow-xl">
              <Printer class="w-10 h-10 text-white" />
            </div>

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight" style="color: white;">
              Printing Equipment Leasing
            </h1>
            <p class="text-xl leading-relaxed mb-8" style="color: rgba(191, 219, 254, 1);">
              Professional printing equipment leasing for businesses of all sizes. Get access to the latest technology without the upfront investment, with maintenance included.
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/contact"
                class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-700 hover:to-blue-900 text-white px-8 py-4 rounded-xl font-bold text-lg transition-all shadow-lg"
              >
                Get a Quote
                <ArrowRight class="w-5 h-5" />
              </a>
              <a
                href="#features"
                class="inline-flex items-center justify-center gap-2 bg-transparent border-2 border-white text-white hover:bg-white hover:text-blue-900 px-8 py-4 rounded-xl font-bold text-lg transition-all"
              >
                Learn More
              </a>
            </div>
          </div>

          <div class="relative">
            <div class="rounded-2xl overflow-hidden shadow-2xl">
              <img src="/images/printer-leasing.png" alt="Printing Equipment Leasing" class="w-full h-80 object-cover" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section id="features" class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
            Why Lease With Us
          </h2>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
            Our leasing programs are designed to give you the best equipment with maximum flexibility.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {features.map((feature) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-100 group">
              <div class="w-14 h-14 bg-gradient-to-br from-blue-100 to-blue-200 rounded-2xl flex items-center justify-center mb-6 group-hover:from-blue-600 group-hover:to-blue-900 transition-all">
                <feature.icon class="w-7 h-7 text-blue-700 group-hover:text-white transition-colors" />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-blue-700 transition-colors">{feature.title}</h3>
              <p class="text-slate-600 leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Leasing Plans -->
    <section class="py-24 bg-gradient-to-br from-slate-50 to-blue-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
            Choose Your Plan
          </h2>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
            Flexible leasing options tailored to your printing needs and budget.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {plans.map((plan, index) => (
            <div class={`rounded-2xl p-8 ${index === 1 ? 'bg-gradient-to-br from-blue-600 to-blue-900 text-white shadow-xl shadow-blue-600/30 scale-105' : 'bg-white shadow-lg'}`}>
              <h3 class={`text-2xl font-bold mb-2 ${index === 1 ? 'text-white' : 'text-slate-900'}`}>{plan.name}</h3>
              <p class={`mb-6 ${index === 1 ? 'text-blue-100' : 'text-slate-600'}`}>{plan.description}</p>

              <ul class="space-y-3 mb-8">
                {plan.features.map((feature) => (
                  <li class="flex items-center gap-3">
                    <div class={`w-5 h-5 rounded-full flex items-center justify-center ${index === 1 ? 'bg-white/20' : 'bg-blue-100'}`}>
                      <Check class={`w-3 h-3 ${index === 1 ? 'text-white' : 'text-blue-600'}`} />
                    </div>
                    <span class={index === 1 ? 'text-white/90' : 'text-slate-700'}>{feature}</span>
                  </li>
                ))}
              </ul>

              <a
                href="/contact"
                class={`block text-center py-3 rounded-xl font-bold transition-all ${
                  index === 1
                    ? 'bg-white text-blue-900 hover:bg-blue-50'
                    : 'bg-gradient-to-r from-blue-600 to-blue-800 text-white hover:from-blue-700 hover:to-blue-900'
                }`}
              >
                Get Started
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Specifications & Applications -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              Available Equipment
            </h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {specifications.map((spec) => (
                <div class="flex items-center gap-3 p-4 bg-slate-50 rounded-xl">
                  <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <Check class="w-5 h-5 text-blue-600" />
                  </div>
                  <span class="text-slate-700 font-medium">{spec}</span>
                </div>
              ))}
            </div>
          </div>

          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              Who We Serve
            </h2>

            <div class="space-y-4">
              {applications.map((app) => (
                <div class="p-6 bg-slate-50 rounded-2xl hover:shadow-lg transition-shadow">
                  <h3 class="text-lg font-bold text-slate-900 mb-2">{app.title}</h3>
                  <p class="text-slate-600">{app.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Projects -->
    <RecentProjects category="all" />

    <!-- CTA Section -->
    <section class="py-24 bg-gradient-to-r from-blue-700 via-blue-800 to-blue-900 text-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml;base64,');"></div>
      </div>

      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <h2 class="text-4xl md:text-5xl font-bold mb-6" style="color: white;">Start Printing Smarter</h2>
        <p class="text-xl mb-10 text-blue-100 leading-relaxed">
          Contact us today to discuss your printing needs and find the perfect leasing solution for your business.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 bg-white text-blue-900 hover:bg-blue-50 px-10 py-5 text-lg font-bold rounded-xl shadow-2xl hover:shadow-white/30 transition-all group"
        >
          Contact Us Today
          <ArrowRight class="w-5 h-5 group-hover:translate-x-1 transition-transform" />
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
