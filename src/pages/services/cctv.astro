---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import RecentProjects from '../../components/RecentProjects.astro';
import { Camera, Check, ArrowRight, Eye, Shield, Cloud, Bell, Moon, Smartphone } from 'lucide-astro';

const features = [
  {
    icon: Eye,
    title: "Real-Time Monitoring",
    description: "Watch your premises live from anywhere with our advanced monitoring solutions."
  },
  {
    icon: Moon,
    title: "Night Vision",
    description: "Crystal clear footage even in complete darkness with infrared technology."
  },
  {
    icon: Cloud,
    title: "Cloud Storage",
    description: "Secure cloud backup ensures your footage is always safe and accessible."
  },
  {
    icon: Bell,
    title: "Motion Detection",
    description: "Intelligent alerts notify you instantly when movement is detected."
  },
  {
    icon: Smartphone,
    title: "Mobile Access",
    description: "Monitor your cameras from your phone or tablet, anytime, anywhere."
  },
  {
    icon: Shield,
    title: "Secure Systems",
    description: "Enterprise-grade security protocols protect your video data."
  }
];

const specifications = [
  "IP and analog camera systems",
  "4K Ultra HD resolution options",
  "DVR/NVR recording systems",
  "PTZ (Pan-Tilt-Zoom) cameras",
  "Weatherproof outdoor cameras",
  "Wide-angle and dome cameras",
  "License plate recognition",
  "Facial recognition capability"
];

const applications = [
  { title: "Office Buildings", description: "Secure entry points, lobbies, and common areas" },
  { title: "Retail Stores", description: "Prevent theft and monitor customer flow" },
  { title: "Warehouses", description: "Track inventory and secure loading docks" },
  { title: "Industrial Sites", description: "Monitor production and ensure safety compliance" }
];
---

<Layout
  title="CCTV Video Surveillance - OptimuxSolutions"
  description="Professional CCTV and video surveillance solutions. IP cameras, DVR/NVR systems, remote monitoring and cloud storage for businesses."
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-950 via-blue-900 to-slate-900 py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Content -->
          <div>
            <a href="/services" class="inline-flex items-center gap-2 text-blue-200 hover:text-white mb-6 transition-colors">
              <ArrowRight class="w-4 h-4 rotate-180" />
              <span class="text-sm font-medium">Back to Services</span>
            </a>

            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-blue-600 to-blue-900 rounded-2xl mb-6 shadow-xl">
              <Camera class="w-10 h-10 text-white" />
            </div>

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight" style="color: white;">
              CCTV Video Surveillance
            </h1>
            <p class="text-xl leading-relaxed mb-8" style="color: rgba(191, 219, 254, 1);">
              Protect your business with advanced video surveillance systems. Real-time monitoring, cloud storage, and intelligent analytics to keep your premises secure 24/7.
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/contact"
                class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-700 hover:to-blue-900 text-white px-8 py-4 rounded-xl font-bold text-lg transition-all shadow-lg"
              >
                Get a Quote
                <ArrowRight class="w-5 h-5" />
              </a>
              <a
                href="#features"
                class="inline-flex items-center justify-center gap-2 bg-transparent border-2 border-white text-white hover:bg-white hover:text-blue-900 px-8 py-4 rounded-xl font-bold text-lg transition-all"
              >
                Learn More
              </a>
            </div>
          </div>

          <!-- Hero Image -->
          <div class="relative">
            <div class="rounded-2xl overflow-hidden shadow-2xl">
              <img src="/images/electronic-security.png" alt="CCTV Video Surveillance" class="w-full h-80 object-cover" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section id="features" class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
            Advanced Surveillance Capabilities
          </h2>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
            Our CCTV systems come packed with features designed to provide comprehensive security coverage.
          </p>
        </div>

        <!-- Features Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {features.map((feature) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-100 group">
              <div class="w-14 h-14 bg-gradient-to-br from-blue-100 to-blue-200 rounded-2xl flex items-center justify-center mb-6 group-hover:from-blue-600 group-hover:to-blue-900 transition-all">
                <feature.icon class="w-7 h-7 text-blue-700 group-hover:text-white transition-colors" />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-blue-700 transition-colors">{feature.title}</h3>
              <p class="text-slate-600 leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Specifications & Applications -->
    <section class="py-24 bg-gradient-to-br from-slate-50 to-blue-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <!-- Specifications -->
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              System Specifications
            </h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {specifications.map((spec) => (
                <div class="flex items-center gap-3 p-4 bg-white rounded-xl shadow-sm">
                  <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <Check class="w-5 h-5 text-blue-600" />
                  </div>
                  <span class="text-slate-700 font-medium">{spec}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Applications -->
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
              Where We Install
            </h2>

            <div class="space-y-4">
              {applications.map((app) => (
                <div class="p-6 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-shadow">
                  <h3 class="text-lg font-bold text-slate-900 mb-2">{app.title}</h3>
                  <p class="text-slate-600">{app.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
            How We Work
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          {[
            { step: "01", title: "Consultation", desc: "We assess your security needs and premises" },
            { step: "02", title: "Design", desc: "Custom system design for optimal coverage" },
            { step: "03", title: "Installation", desc: "Professional installation by certified technicians" },
            { step: "04", title: "Support", desc: "Ongoing maintenance and 24/7 technical support" }
          ].map((item, index) => (
            <div class="relative">
              <div class="bg-white rounded-2xl p-8 shadow-lg border border-slate-100 text-center relative z-10 hover:shadow-xl transition-shadow">
                <div class="text-5xl font-black text-blue-100 mb-4">{item.step}</div>
                <h3 class="text-xl font-bold text-slate-900 mb-2">{item.title}</h3>
                <p class="text-slate-600 text-sm">{item.desc}</p>
              </div>
              {index < 3 && (
                <div class="hidden md:block absolute top-1/2 -right-4 w-8 h-0.5 bg-blue-200 z-0"></div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Recent Projects -->
    <RecentProjects category="cctv" />

    <!-- CTA Section -->
    <section class="py-24 bg-gradient-to-r from-blue-700 via-blue-800 to-blue-900 text-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml;base64,');"></div>
      </div>

      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <h2 class="text-4xl md:text-5xl font-bold mb-6" style="color: white;">Ready to Secure Your Business?</h2>
        <p class="text-xl mb-10 text-blue-100 leading-relaxed">
          Get in touch with our security experts to discuss your video surveillance needs and receive a customized quote.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 bg-white text-blue-900 hover:bg-blue-50 px-10 py-5 text-lg font-bold rounded-xl shadow-2xl hover:shadow-white/30 transition-all group"
        >
          Contact Us Today
          <ArrowRight class="w-5 h-5 group-hover:translate-x-1 transition-transform" />
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
