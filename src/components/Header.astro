---
import { Menu, X } from 'lucide-astro';

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '#contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-border transition-shadow duration-300" id="header">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <img src="/logo.png" alt="OptimuxSolutions" class="h-10 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'text-sm font-medium transition-colors hover:text-primary',
              currentPath === link.href ? 'text-primary' : 'text-text-gray'
            ]}
          >
            {link.label}
          </a>
        ))}
        <a
          href="#contact"
          class="bg-primary text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-primary-dark transition-colors"
        >
          Contact Us
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="md:hidden p-2 text-text-gray hover:text-primary transition-colors"
        id="mobile-menu-btn"
        aria-label="Open menu"
      >
        <Menu class="h-6 w-6" id="menu-icon" />
        <X class="h-6 w-6 hidden" id="close-icon" />
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="hidden md:hidden" id="mobile-menu">
      <div class="py-4 space-y-2 border-t border-border">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'block py-2 px-4 text-sm font-medium rounded-lg transition-colors',
              currentPath === link.href
                ? 'text-primary bg-primary/5'
                : 'text-text-gray hover:text-primary hover:bg-gray-50'
            ]}
          >
            {link.label}
          </a>
        ))}
        <a
          href="#contact"
          class="block mt-4 bg-primary text-white px-4 py-2 rounded-lg text-sm font-medium text-center hover:bg-primary-dark transition-colors"
        >
          Contact Us
        </a>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  const header = document.getElementById('header');

  // Mobile menu toggle
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Add shadow on scroll
  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
      header?.classList.add('shadow-md');
    } else {
      header?.classList.remove('shadow-md');
    }
  });
</script>
