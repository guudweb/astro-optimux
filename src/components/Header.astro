---
import { Menu, X, Globe, ChevronDown, Camera, Shield, DoorOpen, Server, Wrench, Wifi, Banknote, Printer } from 'lucide-astro';

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const serviceLinks = [
  { href: '/services/cctv', label: 'CCTV Video Surveillance', icon: Camera },
  { href: '/services/alarm', label: 'Alarm & Fire Systems', icon: Shield },
  { href: '/services/access', label: 'Access Control', icon: DoorOpen },
  { href: '/services/servers', label: 'Servers & Networks', icon: Server },
  { href: '/services/maintenance', label: 'IT Maintenance', icon: Wrench },
  { href: '/services/telecom', label: 'Telecommunications', icon: Wifi },
  { href: '/services/cash-handling', label: 'Cash Handling Solutions', icon: Banknote },
  { href: '/services/printing', label: 'Printing Equipment Leasing', icon: Printer },
];

const languages = [
  { code: 'en', label: 'English', flag: 'EN' },
  { code: 'es', label: 'Espanol', flag: 'ES' },
  { code: 'fr', label: 'Francais', flag: 'FR' },
];

const currentPath = Astro.url.pathname;
const isServicesActive = currentPath.startsWith('/services');
---

<header class="sticky top-0 z-50">
  <!-- Main nav -->
  <nav class="bg-white/95 backdrop-blur-md shadow-sm border-b border-slate-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-20">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 group">
          <img
            src="/images/logo.jpeg"
            alt="OptimuxSolutions"
            class="h-12 w-auto transition-transform group-hover:scale-105"
          />
          <div class="hidden sm:flex flex-col items-center">
            <span class="text-2xl font-black tracking-tight text-brand-black leading-none" style="font-family: 'Arial Black', 'Helvetica Neue', sans-serif;">OPTIMUX</span>
            <span class="text-[11px] font-medium tracking-[0.35em] text-brand-black/70 mt-0.5">SOLUTIONS</span>
          </div>
        </a>

        <!-- Desktop Navigation -->
        <ul class="hidden lg:flex items-center gap-1">
          <!-- Home -->
          <li>
            <a
              href="/"
              class:list={[
                'relative px-5 py-2 font-medium text-sm transition-colors rounded-lg',
                currentPath === '/'
                  ? 'text-primary bg-primary/5'
                  : 'text-slate-600 hover:text-primary hover:bg-slate-50'
              ]}
            >
              Home
              {currentPath === '/' && (
                <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-1 h-1 bg-primary rounded-full"></span>
              )}
            </a>
          </li>

          <!-- Services Dropdown -->
          <li class="relative" id="services-dropdown-container">
            <button
              type="button"
              class:list={[
                'flex items-center gap-1 px-5 py-2 font-medium text-sm transition-colors rounded-lg',
                isServicesActive
                  ? 'text-primary bg-primary/5'
                  : 'text-slate-600 hover:text-primary hover:bg-slate-50'
              ]}
              id="services-btn"
            >
              Services
              <ChevronDown class="w-3.5 h-3.5 transition-transform" id="services-chevron" />
              {isServicesActive && (
                <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-1 h-1 bg-primary rounded-full"></span>
              )}
            </button>

            <!-- Services Dropdown Menu -->
            <div class="absolute left-0 mt-2 w-72 bg-white rounded-xl shadow-xl border border-slate-100 hidden opacity-0 transition-all duration-200 transform translate-y-2" id="services-menu">
              <div class="p-2">
                <!-- View All Services -->
                <a
                  href="/services"
                  class="flex items-center gap-3 px-4 py-3 text-sm font-semibold text-primary bg-primary/5 rounded-lg hover:bg-primary/10 transition mb-2"
                >
                  <span>View All Services</span>
                </a>

                <div class="h-px bg-slate-100 my-2"></div>

                {serviceLinks.map((service) => (
                  <a
                    href={service.href}
                    class:list={[
                      'flex items-center gap-3 px-4 py-2.5 text-sm rounded-lg transition',
                      currentPath === service.href
                        ? 'text-primary bg-primary/5'
                        : 'text-slate-600 hover:bg-slate-50 hover:text-primary'
                    ]}
                  >
                    <div class="w-8 h-8 bg-slate-100 rounded-lg flex items-center justify-center group-hover:bg-primary/10">
                      <service.icon class="w-4 h-4 text-primary" />
                    </div>
                    <span>{service.label}</span>
                  </a>
                ))}
              </div>
            </div>
          </li>

          <!-- About -->
          <li>
            <a
              href="/about"
              class:list={[
                'relative px-5 py-2 font-medium text-sm transition-colors rounded-lg',
                currentPath === '/about'
                  ? 'text-primary bg-primary/5'
                  : 'text-slate-600 hover:text-primary hover:bg-slate-50'
              ]}
            >
              About
              {currentPath === '/about' && (
                <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-1 h-1 bg-primary rounded-full"></span>
              )}
            </a>
          </li>

          <!-- Contact -->
          <li>
            <a
              href="/contact"
              class:list={[
                'relative px-5 py-2 font-medium text-sm transition-colors rounded-lg',
                currentPath === '/contact'
                  ? 'text-primary bg-primary/5'
                  : 'text-slate-600 hover:text-primary hover:bg-slate-50'
              ]}
            >
              Contact
              {currentPath === '/contact' && (
                <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-1 h-1 bg-primary rounded-full"></span>
              )}
            </a>
          </li>
        </ul>

        <!-- Right side: Language + CTA -->
        <div class="hidden lg:flex items-center gap-3">
          <!-- Language Selector -->
          <div class="relative" id="lang-dropdown-container">
            <button
              type="button"
              class="flex items-center gap-2 px-4 py-2.5 text-slate-600 hover:text-primary transition rounded-lg hover:bg-slate-50 border border-transparent hover:border-slate-200"
              id="lang-btn"
              aria-label="Select language"
            >
              <Globe class="w-4 h-4" />
              <span class="text-sm font-medium">EN</span>
              <ChevronDown class="w-3 h-3 transition-transform" id="lang-chevron" />
            </button>
            <div class="absolute right-0 mt-2 w-44 bg-white rounded-xl shadow-xl border border-slate-100 hidden opacity-0 transition-all duration-200 transform translate-y-2" id="lang-menu">
              <div class="py-2">
                {languages.map((lang) => (
                  <a
                    href={`?lang=${lang.code}`}
                    class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-primary transition"
                  >
                    <span class="w-6 h-6 bg-slate-100 rounded-full flex items-center justify-center text-xs font-bold">{lang.flag}</span>
                    <span>{lang.label}</span>
                  </a>
                ))}
              </div>
            </div>
          </div>

          <!-- CTA Button -->
          <a
            href="/contact"
            class="bg-primary hover:bg-primary-dark text-white px-6 py-2.5 rounded-xl font-semibold text-sm transition-all shadow-md shadow-primary/20 hover:shadow-lg hover:shadow-primary/30"
          >
            Contact Us
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button
          type="button"
          class="lg:hidden p-2.5 text-slate-600 hover:text-primary hover:bg-slate-50 rounded-lg transition-colors"
          id="mobile-menu-btn"
          aria-label="Open menu"
        >
          <Menu class="h-6 w-6" id="menu-icon" />
          <X class="h-6 w-6 hidden" id="close-icon" />
        </button>
      </div>

      <!-- Mobile Navigation -->
      <div class="hidden lg:hidden" id="mobile-menu">
        <div class="py-6 space-y-2 border-t border-slate-100">
          <!-- Home -->
          <a
            href="/"
            class:list={[
              'block py-3 px-4 font-medium rounded-xl transition-colors',
              currentPath === '/'
                ? 'text-primary bg-primary/5'
                : 'text-slate-600 hover:text-primary hover:bg-slate-50'
            ]}
          >
            Home
          </a>

          <!-- Services Section -->
          <div class="px-4 py-2">
            <a
              href="/services"
              class:list={[
                'block py-2 font-semibold transition-colors',
                isServicesActive ? 'text-primary' : 'text-slate-900'
              ]}
            >
              Services
            </a>
            <div class="mt-2 ml-2 space-y-1 border-l-2 border-slate-200 pl-4">
              {serviceLinks.map((service) => (
                <a
                  href={service.href}
                  class:list={[
                    'flex items-center gap-3 py-2 text-sm transition-colors',
                    currentPath === service.href
                      ? 'text-primary'
                      : 'text-slate-600 hover:text-primary'
                  ]}
                >
                  <service.icon class="w-4 h-4" />
                  <span>{service.label}</span>
                </a>
              ))}
            </div>
          </div>

          <!-- About -->
          <a
            href="/about"
            class:list={[
              'block py-3 px-4 font-medium rounded-xl transition-colors',
              currentPath === '/about'
                ? 'text-primary bg-primary/5'
                : 'text-slate-600 hover:text-primary hover:bg-slate-50'
            ]}
          >
            About
          </a>

          <!-- Contact -->
          <a
            href="/contact"
            class:list={[
              'block py-3 px-4 font-medium rounded-xl transition-colors',
              currentPath === '/contact'
                ? 'text-primary bg-primary/5'
                : 'text-slate-600 hover:text-primary hover:bg-slate-50'
            ]}
          >
            Contact
          </a>

          <!-- Mobile Language Selector -->
          <div class="px-4 py-4 mt-4 border-t border-slate-100">
            <p class="text-xs text-slate-400 uppercase tracking-wider mb-3">Language</p>
            <div class="flex gap-2">
              {languages.map((lang) => (
                <a
                  href={`?lang=${lang.code}`}
                  class="flex items-center gap-2 px-4 py-2 text-sm bg-slate-50 rounded-lg hover:bg-primary hover:text-white transition font-medium"
                >
                  <span>{lang.flag}</span>
                </a>
              ))}
            </div>
          </div>

          <a
            href="/contact"
            class="block mt-4 bg-primary text-white px-4 py-3.5 rounded-xl font-semibold text-center hover:bg-primary-dark transition shadow-lg shadow-primary/20"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  const langBtn = document.getElementById('lang-btn');
  const langMenu = document.getElementById('lang-menu');
  const langChevron = document.getElementById('lang-chevron');
  const servicesBtn = document.getElementById('services-btn');
  const servicesMenu = document.getElementById('services-menu');
  const servicesChevron = document.getElementById('services-chevron');

  // Mobile menu toggle
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Language dropdown
  langBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    closeServicesMenu();
    const isHidden = langMenu?.classList.contains('hidden');
    if (isHidden) {
      langMenu?.classList.remove('hidden');
      setTimeout(() => {
        langMenu?.classList.remove('opacity-0', 'translate-y-2');
        langChevron?.classList.add('rotate-180');
      }, 10);
    } else {
      closeLangMenu();
    }
  });

  // Services dropdown
  servicesBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    closeLangMenu();
    const isHidden = servicesMenu?.classList.contains('hidden');
    if (isHidden) {
      servicesMenu?.classList.remove('hidden');
      setTimeout(() => {
        servicesMenu?.classList.remove('opacity-0', 'translate-y-2');
        servicesChevron?.classList.add('rotate-180');
      }, 10);
    } else {
      closeServicesMenu();
    }
  });

  function closeLangMenu() {
    langMenu?.classList.add('opacity-0', 'translate-y-2');
    langChevron?.classList.remove('rotate-180');
    setTimeout(() => {
      langMenu?.classList.add('hidden');
    }, 200);
  }

  function closeServicesMenu() {
    servicesMenu?.classList.add('opacity-0', 'translate-y-2');
    servicesChevron?.classList.remove('rotate-180');
    setTimeout(() => {
      servicesMenu?.classList.add('hidden');
    }, 200);
  }

  // Close dropdowns when clicking outside
  document.addEventListener('click', (e) => {
    const langContainer = document.getElementById('lang-dropdown-container');
    const servicesContainer = document.getElementById('services-dropdown-container');

    if (langContainer && !langContainer.contains(e.target as Node)) {
      closeLangMenu();
    }
    if (servicesContainer && !servicesContainer.contains(e.target as Node)) {
      closeServicesMenu();
    }
  });
</script>
