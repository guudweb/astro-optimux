---
import { ArrowRight, Shield, Cpu, Code } from 'lucide-astro';

const highlights = [
  {
    title: "IT Infrastructure",
    description: "Enterprise servers, secure networks, and telecommunications for business continuity and optimal performance.",
    image: "/images/itinfractruture.jpg",
    icon: Cpu,
    href: "/what-we-do/it-infrastructure"
  },
  {
    title: "Physical Security",
    description: "Video surveillance, access control, alarm and fire systems to strengthen the protection of your physical infrastructure.",
    image: "/images/cctv.webp",
    icon: Shield,
    href: "/what-we-do/physical-security"
  },
  {
    title: "Web & Email Development",
    description: "Custom websites, web applications, and professional email solutions to enhance your digital presence.",
    image: "/images/webemailg2.png",
    icon: Code,
    href: "/what-we-do/web-email"
  }
];
---

<!-- Cards con imÃ¡genes de fondo y overlay -->
<section class="section-padding bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 mb-4">
        <span class="w-2 h-2 bg-primary rounded-full"></span>
        <span class="text-sm font-semibold text-primary">Who We Are</span>
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
        What We <span class="text-primary">Do</span>
      </h2>
      <p class="text-slate-600 max-w-2xl mx-auto">
        We accompany businesses and organizations at every stage of their projects, combining IT, physical security, and digital transformation.
      </p>
    </div>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {highlights.map((item) => (
        <a href={item.href} class="relative h-80 rounded-2xl overflow-hidden group block cursor-pointer">
          <!-- Background Image -->
          <img
            src={item.image}
            alt={item.title}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <!-- Dark Gradient Overlay - stronger for better text readability -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/95 via-black/60 to-black/30"></div>

          <!-- Content -->
          <div class="absolute inset-0 p-6 flex flex-col justify-end">
            <!-- Icon -->
            <div class="w-12 h-12 bg-primary backdrop-blur-sm rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-all shadow-lg">
              <item.icon class="w-6 h-6 text-white" />
            </div>
            <!-- Title -->
            <h3 class="text-xl font-bold mb-2 drop-shadow-lg" style="color: white;">{item.title}</h3>
            <!-- Description -->
            <p class="text-sm leading-relaxed drop-shadow-md" style="color: rgba(255,255,255,0.95);">{item.description}</p>
            <!-- Learn More -->
            <div class="flex items-center gap-2 mt-3 text-white font-semibold text-sm opacity-0 group-hover:opacity-100 transition-opacity">
              <span>Learn More</span>
              <ArrowRight class="w-4 h-4" />
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a href="/about" class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white px-6 py-3 rounded-xl font-semibold transition-all group">
        Learn More About Us
        <ArrowRight class="w-5 h-5 group-hover:translate-x-1 transition-transform" />
      </a>
    </div>
  </div>
</section>
