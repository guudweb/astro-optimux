---
import { ArrowRight, Check } from 'lucide-astro';

const features = [
  {
    title: "Servers & Networks",
    subtitle: "Enterprise-grade infrastructure",
    description: "Enterprise-grade server installation, configuration and administration. We design secure and scalable networks that grow with your business.",
    benefits: [
      "Server installation & config",
      "Network design & security",
      "Virtualization solutions",
      "Cloud integration"
    ],
    cta: { text: "Learn More", href: "/services/servers" },
    image: "/images/server.jpg",
    imagePosition: "left"
  },
  {
    title: "Cash Handling Solutions",
    subtitle: "Secure and efficient cash management",
    description: "Modern cash handling equipment for banks, retail and businesses. Our solutions include cash counters, sorters, and secure storage systems.",
    benefits: [
      "Advanced counting machines",
      "Counterfeit detection",
      "Secure storage systems",
      "Reduced human error"
    ],
    cta: { text: "Learn More", href: "/services/cash-handling" },
    image: "/images/CASH HANDLING.webp",
    imagePosition: "right",
    noBorder: true
  },
  {
    title: "X-Ray Scanner",
    subtitle: "Advanced security screening",
    description: "Professional X-ray screening equipment for baggage, packages, and cargo inspection. Essential for airports, government buildings, and high-security facilities.",
    benefits: [
      "High-resolution imaging",
      "Threat detection systems",
      "Fast screening process",
      "Compliance certified"
    ],
    cta: { text: "Learn More", href: "/services/xray-scanner" },
    image: "/images/xrayscanner.png",
    imagePosition: "left",
    noBorder: true
  },
  {
    title: "Printing Equipment Leasing",
    subtitle: "Cost-effective printing solutions",
    description: "Professional printing equipment leasing services for businesses of all sizes. Get access to high-quality printers without the upfront investment.",
    benefits: [
      "No upfront investment",
      "Maintenance included",
      "Latest technology access",
      "Flexible lease terms"
    ],
    cta: { text: "Get Started", href: "/services/printing" },
    image: "/images/Printing Equipment Leasing.webp",
    imagePosition: "left"
  }
];
---

{features.map((feature, index) => (
  <section class={`section-padding relative overflow-hidden ${index % 2 === 0 ? 'bg-white' : 'bg-slate-50 bg-pattern-curves'}`}>
    <!-- Decorative gradient -->
    {index % 2 === 0 ? (
      <div class="absolute top-1/2 -translate-y-1/2 right-0 w-96 h-96 bg-gradient-to-l from-primary/5 to-transparent rounded-full blur-3xl"></div>
    ) : (
      <div class="absolute top-1/2 -translate-y-1/2 left-0 w-96 h-96 bg-gradient-to-r from-primary/5 to-transparent rounded-full blur-3xl"></div>
    )}

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class={`flex flex-col ${feature.imagePosition === 'left' ? 'lg:flex-row' : 'lg:flex-row-reverse'} items-center gap-16`}>

        <!-- Image -->
        <div class="lg:w-1/2">
          <div class={`relative ${feature.noBorder ? '' : 'rounded-3xl'} overflow-hidden ${feature.noBorder ? '' : 'shadow-2xl shadow-slate-200/50'} group`}>
            <img
              src={feature.image}
              alt={feature.title}
              class={`w-full ${feature.noBorder ? 'object-contain' : 'aspect-[4/3] object-cover'} transition-transform duration-700 group-hover:scale-105`}
            />
            {!feature.noBorder && (
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900/30 via-transparent to-transparent"></div>
            )}

            <!-- Floating badge -->
            {!feature.noBorder && (
              <div class="absolute bottom-6 left-6 bg-white/95 backdrop-blur-sm rounded-xl px-4 py-3 shadow-lg">
                <div class="flex items-center gap-2">
                  <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                  <span class="text-sm font-semibold text-slate-700">Available 24/7</span>
                </div>
              </div>
            )}
          </div>
        </div>

        <!-- Content -->
        <div class="lg:w-1/2">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-4 bg-primary/10">
            <span class="w-2 h-2 rounded-full bg-primary"></span>
            <span class="text-sm font-semibold text-primary">{feature.subtitle}</span>
          </div>

          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-slate-900">
            {feature.title}
          </h2>

          <p class="text-lg leading-relaxed mb-8 text-slate-600">
            {feature.description}
          </p>

          <!-- Benefits List -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
            {feature.benefits.map((benefit) => (
              <div class="flex items-center gap-3">
                <div class="w-6 h-6 rounded-full flex items-center justify-center flex-shrink-0 bg-primary/10">
                  <Check class="w-4 h-4 text-primary" />
                </div>
                <span class="text-slate-700">{benefit}</span>
              </div>
            ))}
          </div>

          <a
            href={feature.cta.href}
            class="inline-flex items-center gap-2 px-8 py-4 rounded-xl font-bold text-lg transition-all group bg-primary hover:bg-primary-dark text-white shadow-lg shadow-primary/20 hover:shadow-xl hover:shadow-primary/30"
          >
            {feature.cta.text}
            <ArrowRight class="w-5 h-5 transition-transform group-hover:translate-x-1" />
          </a>
        </div>

      </div>
    </div>
  </section>
))}
