---
const features = [
  {
    title: "Preventive IT Maintenance",
    subtitle: "Keep your infrastructure running 24/7",
    description: "Our preventive maintenance services ensure your systems operate without interruptions. Continuous monitoring, scheduled updates and technical support when you need it. We help you avoid costly downtime and extend the life of your IT assets.",
    cta: { text: "Learn More", href: "/services#maintenance" },
    image: "/images/Preventive IT Maintenance.webp",
    imagePosition: "left"
  },
  {
    title: "Cash Handling Solutions",
    subtitle: "Secure and efficient cash management",
    description: "Modern cash handling equipment for banks, retail and businesses. Our solutions include cash counters, sorters, and secure storage systems that streamline operations and reduce human error in cash processing.",
    cta: { text: "Learn More", href: "#contact" },
    image: "/images/CASH HANDLING.webp",
    imagePosition: "right",
    noBorder: true
  },
  {
    title: "Printing Equipment Leasing",
    subtitle: "Cost-effective printing solutions",
    description: "Professional printing equipment leasing services for businesses of all sizes. Get access to high-quality printers, copiers and multifunction devices without the upfront investment. Includes maintenance and support.",
    cta: { text: "Start Now", href: "#contact" },
    image: "/images/Printing Equipment Leasing.webp",
    imagePosition: "left"
  }
];
---

{features.map((feature, index) => (
  <section class={`py-20 ${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}`}>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class={`flex flex-col ${feature.imagePosition === 'left' ? 'lg:flex-row' : 'lg:flex-row-reverse'} items-center gap-12`}>

        <!-- Image -->
        <div class="lg:w-1/2">
          <div class={`relative ${feature.noBorder ? '' : 'rounded-2xl'} overflow-hidden ${feature.noBorder ? '' : 'shadow-2xl'}`}>
            <img
              src={feature.image}
              alt={feature.title}
              class={`w-full ${feature.noBorder ? 'object-contain' : 'aspect-video object-cover'}`}
            />
          </div>
        </div>

        <!-- Content -->
        <div class="lg:w-1/2">
          <span class="text-sm font-semibold text-primary uppercase tracking-wider">
            {feature.subtitle}
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2 mb-6">
            {feature.title}
          </h2>
          <p class="text-gray-600 text-lg leading-relaxed mb-8">
            {feature.description}
          </p>
          <a
            href={feature.cta.href}
            class="inline-block bg-primary hover:bg-primary-dark text-white px-8 py-3 rounded-lg font-semibold transition shadow-lg hover:shadow-xl"
          >
            {feature.cta.text}
          </a>
        </div>

      </div>
    </div>
  </section>
))}
