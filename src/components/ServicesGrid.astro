---
import { ArrowRight, FileText, Network, Shield, Code, Camera, Server, Printer, ScanLine } from 'lucide-astro';
import { getLocale, useTranslations, getLocalizedPath } from '../i18n/utils';

const locale = getLocale(Astro.url);
const t = useTranslations(locale);

const services = [
  {
    icon: FileText,
    title: 'Consulting & Audit',
    description: 'Strategic guidance to realize and manage your IT projects with our business expertise.',
    features: ['Needs Assessment', 'Specifications', 'IT Roadmaps', 'Project Management'],
    image: '/images/consulting-audit.png',
    href: getLocalizedPath('/services', locale)
  },
  {
    icon: Network,
    title: 'IT Infrastructure',
    description: 'Design and deployment of your network infrastructure and systems for optimal performance.',
    features: ['LAN/WAN/WLAN Networks', 'Virtualization', 'Collaboration Solutions', 'Cloud Architecture'],
    image: '/images/it-infrastructure.png',
    href: getLocalizedPath('/services/servers', locale)
  },
  {
    icon: Shield,
    title: 'Cybersecurity',
    description: 'Complete protection of your data and systems with cutting-edge security solutions.',
    features: ['Advanced Firewalls', 'Penetration Testing', 'MFA Authentication', 'Security Audits'],
    image: '/images/cybersecurity.png',
    href: getLocalizedPath('/services', locale)
  },
  {
    icon: Code,
    title: 'Software Development',
    description: 'Creation of custom software solutions tailored to your specific business needs.',
    features: ['Web & Mobile Apps', 'Information Systems', 'Business Solutions', 'Integration'],
    image: '/images/software-dev.png',
    href: getLocalizedPath('/services', locale)
  },
  {
    icon: Camera,
    title: 'Electronic Security',
    description: 'Physical security systems to ensure the protection of people and property.',
    features: ['Video Surveillance', 'Access Control', 'Intrusion Detection', 'Smart Alarms'],
    image: '/images/electronic-security.png',
    href: getLocalizedPath('/services/cctv', locale)
  },
  {
    icon: Server,
    title: 'Equipment & Managed Services',
    description: 'IT equipment supply and outsourced management of your IT infrastructure.',
    features: ['Multi-brand Hardware', 'Complete Managed Services', '24/7 Support', 'Maintenance'],
    image: '/images/equipment-services.png',
    href: getLocalizedPath('/services/maintenance', locale)
  },
  {
    icon: Printer,
    title: 'Printer Leasing & Rentals',
    description: 'Flexible printer leasing and rental solutions for businesses of all sizes.',
    features: ['Multifunction Printers', 'Flexible Lease Terms', 'Maintenance Included', 'Latest Technology'],
    image: '/images/printer-leasing.png',
    href: getLocalizedPath('/services/printing', locale)
  },
  {
    icon: ScanLine,
    title: 'X-Ray Inspection Machines',
    description: 'Advanced X-ray inspection systems for security screening and cargo inspection.',
    features: ['Baggage Screening', 'Cargo Inspection', 'Multi-energy Imaging', 'Threat Detection'],
    image: '/images/xray-inspection.png',
    href: getLocalizedPath('/services/xray-scanner', locale)
  },
];
---

<section class="py-24 bg-gradient-to-br from-slate-50 to-blue-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">{t('services.title')}</h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        {t('services.subtitle')}
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service) => (
        <a href={service.href} class="group block h-full">
          <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-3 border border-slate-200 h-full flex flex-col">
            <!-- Image -->
            <div class="h-48 overflow-hidden relative">
              <img
                src={service.image}
                alt={service.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent"></div>
            </div>

            <!-- Content -->
            <div class="p-6 flex-1 flex flex-col">
              <!-- Icon -->
              <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-blue-900 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 group-hover:rotate-3 transition-all duration-300 shadow-lg -mt-14 relative z-10">
                <service.icon class="w-8 h-8 text-white" />
              </div>

              <h3 class="text-xl font-bold text-slate-900 group-hover:text-blue-700 transition-colors mb-3">
                {service.title}
              </h3>

              <p class="text-slate-600 leading-relaxed text-sm mb-4 flex-1">
                {service.description}
              </p>

              <!-- Features -->
              <ul class="space-y-2 mb-4">
                {service.features.map((feature) => (
                  <li class="flex items-start space-x-2 text-sm text-slate-600">
                    <span class="w-1.5 h-1.5 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>

              <!-- Learn More Link -->
              <div class="flex items-center gap-2 text-blue-700 font-semibold text-sm mt-auto pt-4 border-t border-slate-100">
                <span>{t('common.learnMore')}</span>
                <ArrowRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- View All Services Button -->
    <div class="text-center mt-12">
      <a
        href={getLocalizedPath('/services', locale)}
        class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-700 to-blue-900 hover:from-blue-800 hover:to-blue-950 text-white px-8 py-4 rounded-xl font-bold text-lg transition-all shadow-lg hover:shadow-xl group"
      >
        {t('common.viewAll')} {t('services.title')}
        <ArrowRight class="w-5 h-5 group-hover:translate-x-1 transition-transform" />
      </a>
    </div>
  </div>
</section>
