---
interface Props {
  title?: string;
  buttonText?: string;
  buttonHref?: string;
}

const {
  title = 'Ready to optimize your IT infrastructure?',
  buttonText = 'Request a Quote',
  buttonHref = '#contact'
} = Astro.props;
---

<section class="bg-primary py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">
      {title}
    </h2>
    <a
      href={buttonHref}
      class="inline-flex items-center justify-center px-8 py-3 bg-white text-primary font-semibold rounded-lg hover:bg-gray-100 transition-colors shadow-lg"
    >
      {buttonText}
    </a>
  </div>
</section>
