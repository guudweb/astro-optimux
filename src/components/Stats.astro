---
const stats = [
  { number: '500+', label: 'Completed Projects' },
  { number: '200+', label: 'Satisfied Clients' },
  { number: '15+', label: 'Years of Experience' },
  { number: '50+', label: 'IT Experts' },
];
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {stats.map((stat) => (
        <div class="text-center group hover:scale-105 transition-transform duration-300">
          <div class="text-5xl md:text-6xl font-bold bg-gradient-to-r from-blue-700 to-blue-900 bg-clip-text text-transparent mb-3">
            {stat.number}
          </div>
          <div class="text-slate-600 font-semibold text-lg">
            {stat.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
