---
import { Mail, Phone, MapPin, Facebook, Linkedin, Instagram, ArrowRight } from 'lucide-astro';

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const serviceLinks = [
  { href: '/services#cctv', label: 'Video Surveillance' },
  { href: '/services#access', label: 'Access Control' },
  { href: '/services#servers', label: 'Network Devices' },
  { href: '/services#maintenance', label: 'IT Maintenance' },
];

const contactInfo = {
  phone: '+240 222 513 410',
  email: 'optimux@optimuxsolutions.com',
  address: 'Malabo II, Zona de Sampaka',
  city: 'Malabo, Equatorial Guinea',
};
---

<footer class="relative bg-slate-900 overflow-hidden" id="contact">
  <!-- Decorative gradients -->
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-cyan-500/5 rounded-full blur-3xl"></div>

  <!-- Main Footer -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">

      <!-- About -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-flex items-center gap-3 mb-6">
          <img
            src="/images/logo.jpeg"
            alt="OptimuxSolutions"
            class="h-12 w-auto"
          />
          <div class="flex flex-col">
            <span class="text-xl tracking-tight leading-none" style="font-family: 'Exo', sans-serif; font-weight: 900; color: white;">OPTIMUX</span>
            <span class="text-[10px] tracking-[0.25em] mt-0.5" style="font-family: 'BankGothic', sans-serif; font-weight: 300; color: rgba(255,255,255,0.7);">SOLUTIONS</span>
          </div>
        </a>
        <p style="color: rgba(255,255,255,0.6);" class="leading-relaxed text-sm mb-6">
          Leading provider of innovative IT, telecommunications and security solutions. Specialized in IT maintenance, network management and security systems.
        </p>

        <!-- Social -->
        <div class="flex gap-3">
          <a href="#" class="w-10 h-10 bg-white/10 hover:bg-primary rounded-xl flex items-center justify-center transition-all group" aria-label="Facebook">
            <Facebook class="w-5 h-5 text-white/70 group-hover:text-white transition-colors" />
          </a>
          <a href="#" class="w-10 h-10 bg-white/10 hover:bg-primary rounded-xl flex items-center justify-center transition-all group" aria-label="LinkedIn">
            <Linkedin class="w-5 h-5 text-white/70 group-hover:text-white transition-colors" />
          </a>
          <a href="#" class="w-10 h-10 bg-white/10 hover:bg-primary rounded-xl flex items-center justify-center transition-all group" aria-label="Instagram">
            <Instagram class="w-5 h-5 text-white/70 group-hover:text-white transition-colors" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-bold mb-6" style="color: white;">Quick Links</h4>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="group flex items-center gap-2 hover:text-primary transition-colors text-sm" style="color: rgba(255,255,255,0.6);">
                <ArrowRight class="w-4 h-4 text-primary opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all" />
                <span>{link.label}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-lg font-bold mb-6" style="color: white;">Services</h4>
        <ul class="space-y-3">
          {serviceLinks.map((link) => (
            <li>
              <a href={link.href} class="group flex items-center gap-2 hover:text-primary transition-colors text-sm" style="color: rgba(255,255,255,0.6);">
                <ArrowRight class="w-4 h-4 text-primary opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all" />
                <span>{link.label}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-lg font-bold mb-6" style="color: white;">Contact Us</h4>
        <ul class="space-y-4">
          <li>
            <a href={`tel:${contactInfo.phone}`} class="flex items-center gap-4 hover:text-primary transition-colors group" style="color: rgba(255,255,255,0.6);">
              <div class="w-10 h-10 bg-white/10 group-hover:bg-primary rounded-xl flex items-center justify-center transition-colors">
                <Phone class="w-5 h-5 text-primary group-hover:text-white transition-colors" />
              </div>
              <span class="text-sm">{contactInfo.phone}</span>
            </a>
          </li>
          <li>
            <a href={`mailto:${contactInfo.email}`} class="flex items-center gap-4 hover:text-primary transition-colors group" style="color: rgba(255,255,255,0.6);">
              <div class="w-10 h-10 bg-white/10 group-hover:bg-primary rounded-xl flex items-center justify-center transition-colors">
                <Mail class="w-5 h-5 text-primary group-hover:text-white transition-colors" />
              </div>
              <span class="text-sm">{contactInfo.email}</span>
            </a>
          </li>
          <li>
            <div class="flex items-start gap-4" style="color: rgba(255,255,255,0.6);">
              <div class="w-10 h-10 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <MapPin class="w-5 h-5 text-primary" />
              </div>
              <span class="text-sm">{contactInfo.address}<br/>{contactInfo.city}</span>
            </div>
          </li>
        </ul>
      </div>

    </div>
  </div>

  <!-- Copyright -->
  <div class="relative border-t border-white/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm" style="color: rgba(255,255,255,0.5);">
          Copyright &copy; {new Date().getFullYear()} OptimuxSolutions. All rights reserved.
        </p>
        <div class="flex items-center gap-6 text-sm" style="color: rgba(255,255,255,0.5);">
          <a href="#" class="hover:text-primary transition-colors">Privacy Policy</a>
          <a href="#" class="hover:text-primary transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>
