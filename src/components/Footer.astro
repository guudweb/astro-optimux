---
import { Mail, Phone, MapPin } from 'lucide-astro';

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '#contact', label: 'Contact' },
];

const contactInfo = {
  phone: '+240 222 513 410',
  email: 'optimux@optimuxsolutions.com',
  address: 'Malabo II, Zona de Sampaka - Malabo, Guinea Equatorial',
};
---

<footer class="bg-text-dark text-white" id="contact">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <a href="/" class="flex items-center gap-2 mb-4">
          <img src="/logo.png" alt="OptimuxSolutions" class="h-10 w-auto brightness-0 invert" />
        </a>
        <p class="text-gray-400 text-sm italic mb-4">
          "Optimize today, perform tomorrow"
        </p>
        <p class="text-gray-400 text-sm">
          Professional IT solutions for businesses looking to optimize their technology infrastructure.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact</h3>
        <ul class="space-y-3">
          <li>
            <a href={`tel:${contactInfo.phone}`} class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors text-sm">
              <Phone class="h-4 w-4" />
              {contactInfo.phone}
            </a>
          </li>
          <li>
            <a href={`mailto:${contactInfo.email}`} class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors text-sm">
              <Mail class="h-4 w-4" />
              {contactInfo.email}
            </a>
          </li>
          <li class="flex items-center gap-2 text-gray-400 text-sm">
            <MapPin class="h-4 w-4 flex-shrink-0" />
            {contactInfo.address}
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-700 mt-8 pt-8 text-center">
      <p class="text-gray-400 text-sm">
        &copy; {new Date().getFullYear()} OptimuxSolutions. All rights reserved.
      </p>
    </div>
  </div>
</footer>
