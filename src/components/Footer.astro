---
import { Mail, Phone, MapPin, Facebook, Twitter, Linkedin, Instagram } from 'lucide-astro';
import { getLocale, useTranslations, getLocalizedPath } from '../i18n/utils';

const locale = getLocale(Astro.url);
const t = useTranslations(locale);

const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: getLocalizedPath('/', locale), label: t('nav.home') },
  { href: getLocalizedPath('/about', locale), label: t('nav.about') },
  { href: getLocalizedPath('/services', locale), label: t('nav.services') },
  { href: getLocalizedPath('/contact', locale), label: t('nav.contact') },
];

const services = [
  { href: getLocalizedPath('/services', locale), label: 'Consulting & Audit' },
  { href: getLocalizedPath('/services/servers', locale), label: 'IT Infrastructure' },
  { href: getLocalizedPath('/services', locale), label: 'Cybersecurity' },
  { href: getLocalizedPath('/services/cctv', locale), label: 'Electronic Security' },
  { href: getLocalizedPath('/services/maintenance', locale), label: 'Equipment & Managed Services' },
  { href: getLocalizedPath('/services/telecom', locale), label: 'Telecommunications' },
];

const contactInfo = {
  phone: '+240 222 513 410',
  email: 'optimux@optimuxsolutions.com',
  address: 'Malabo II, Zona de Sampaka',
  city: 'Malabo, Equatorial Guinea',
};
---

<footer class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-slate-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">

      <!-- Company Info -->
      <div>
        <div class="flex items-center space-x-3 mb-6">
          <img
            src="/images/Logo-05.png"
            alt="OptimuxSolutions"
            class="h-12 w-auto"
          />
          <div class="flex flex-col">
            <span class="text-xl font-bold text-white" style="font-family: 'Exo', sans-serif; font-weight: 900;">OPTIMUX</span>
            <span class="text-[10px] tracking-[0.25em] text-slate-400" style="font-family: 'BankGothic', sans-serif; font-weight: 300;">SOLUTIONS</span>
          </div>
        </div>
        <p class="text-sm mb-6 leading-relaxed text-slate-400">
          {t('footer.description')}
        </p>
        <div class="flex space-x-4">
          <a href="#" class="w-10 h-10 bg-slate-800 hover:bg-blue-600 rounded-lg flex items-center justify-center transition-colors" aria-label="Facebook">
            <Facebook class="w-5 h-5" />
          </a>
          <a href="#" class="w-10 h-10 bg-slate-800 hover:bg-blue-600 rounded-lg flex items-center justify-center transition-colors" aria-label="Twitter">
            <Twitter class="w-5 h-5" />
          </a>
          <a href="#" class="w-10 h-10 bg-slate-800 hover:bg-blue-600 rounded-lg flex items-center justify-center transition-colors" aria-label="LinkedIn">
            <Linkedin class="w-5 h-5" />
          </a>
          <a href="#" class="w-10 h-10 bg-slate-800 hover:bg-blue-600 rounded-lg flex items-center justify-center transition-colors" aria-label="Instagram">
            <Instagram class="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-bold text-lg mb-6 border-b-2 border-blue-600 pb-2 inline-block" style="color: white;">{t('footer.quickLinks')}</h3>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="hover:text-blue-400 transition-colors text-sm flex items-center space-x-2 group">
                <span class="w-1.5 h-1.5 bg-blue-600 rounded-full group-hover:w-2 group-hover:h-2 transition-all"></span>
                <span>{link.label}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-bold text-lg mb-6 border-b-2 border-blue-600 pb-2 inline-block" style="color: white;">{t('footer.services')}</h3>
        <ul class="space-y-3">
          {services.map((service) => (
            <li>
              <a href={service.href} class="hover:text-blue-400 transition-colors text-sm flex items-center space-x-2 group">
                <span class="w-1.5 h-1.5 bg-blue-600 rounded-full group-hover:w-2 group-hover:h-2 transition-all"></span>
                <span>{service.label}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-bold text-lg mb-6 border-b-2 border-blue-600 pb-2 inline-block" style="color: white;">{t('nav.contact')}</h3>
        <ul class="space-y-4">
          <li class="flex items-start space-x-3">
            <MapPin class="w-5 h-5 text-blue-400 flex-shrink-0 mt-0.5" />
            <span class="text-sm">{contactInfo.address}<br/>{contactInfo.city}</span>
          </li>
          <li class="flex items-center space-x-3">
            <Phone class="w-5 h-5 text-blue-400 flex-shrink-0" />
            <a href={`tel:${contactInfo.phone}`} class="text-sm hover:text-blue-400 transition-colors">
              {contactInfo.phone}
            </a>
          </li>
          <li class="flex items-center space-x-3">
            <Mail class="w-5 h-5 text-blue-400 flex-shrink-0" />
            <a href={`mailto:${contactInfo.email}`} class="text-sm hover:text-blue-400 transition-colors">
              {contactInfo.email}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-slate-700 mt-12 pt-8 text-center">
      <p class="text-sm text-slate-400">
        &copy; {currentYear} OptimuxSolutions. {t('footer.copyright').replace('Â© 2024 OptimuxSolutions. ', '')} | <a href="#" class="hover:text-blue-400 transition-colors">{t('footer.privacy')}</a> | <a href="#" class="hover:text-blue-400 transition-colors">{t('footer.terms')}</a>
      </p>
    </div>
  </div>
</footer>
