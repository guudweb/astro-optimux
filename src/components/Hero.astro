---
import { ArrowRight } from 'lucide-astro';

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  showCTA?: boolean;
  compact?: boolean;
}

const {
  title = 'Innovative IT Solutions for',
  subtitle = 'Your Digital Transformation',
  description = 'Complete expertise in infrastructure, cybersecurity, software development, and IT services to propel your business to success.',
  showCTA = true,
  compact = false
} = Astro.props;

// Slides para el Hero Slider
const heroSlides = [
  {
    image: '/images/hero-bg.png',
    mainSlogan: 'Optimize Today, Perform Tomorrow',
    tagline: 'Innovative IT Solutions for Your Digital Transformation',
    subtitle: 'Complete expertise in infrastructure, cybersecurity, software development, and IT services to propel your business to success.'
  },
  {
    image: '/images/it-infrastructure.png',
    title: 'Integrated and Extended Solutions',
    subtitle: 'How can businesses overcome the challenges of complex IT environments? Radical simplicity is the answer.'
  },
  {
    image: '/images/electronic-security.png',
    title: 'Quality Service and After-Sales Support',
    subtitle: 'We stand behind every solution we deliver with dedicated support and maintenance services.'
  },
  {
    image: '/images/equipment-services.png',
    title: 'IT Equipment Supply and Procurement',
    subtitle: 'Do you need IT equipment procurement for your company? Optimux offers complete IT equipment procurement services. We offer no hassle warranties and don\'t require long-term contracts.'
  }
];
---

{compact ? (
  <!-- Compact Hero for inner pages -->
  <section class="relative py-16 bg-gradient-to-br from-blue-950 via-blue-900 to-slate-900 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <img
        src="/images/hero-bg.png"
        alt=""
        class="w-full h-full object-cover"
      />
    </div>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-blue-900/50 to-blue-950"></div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
        {title}
      </h1>
      {description && (
        <p class="text-lg text-blue-100 max-w-2xl mx-auto">
          {description}
        </p>
      )}
    </div>
  </section>
) : (
  <!-- Hero with Slider for home page (reduced size, centered layout with background image) -->
  <section class="relative py-32 md:py-40 flex items-center justify-center bg-gradient-to-br from-blue-950 via-blue-900 to-slate-900 text-white overflow-hidden">
    <!-- Slides Container (Background Images) -->
    <div id="hero-slider" class="absolute inset-0">
      {heroSlides.map((slide, index) => (
        <div
          class={`hero-slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
          data-index={index}
        >
          <!-- Background Image -->
          <div class="absolute inset-0 opacity-20">
            <img
              src={slide.image}
              alt={slide.title}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      ))}
    </div>

    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-blue-900/50 to-blue-950"></div>

    <!-- Content -->
    <div class="relative z-10 max-w-6xl mx-auto px-8 sm:px-12 lg:px-16 text-center py-10">
      <!-- Slide Texts Container -->
      <div id="hero-texts" class="relative">
        {heroSlides.map((slide, index) => (
          <div
            class={`hero-text absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0 pointer-events-none'}`}
            data-index={index}
          >
            {slide.mainSlogan ? (
              <>
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-4 whitespace-nowrap">
                  <span style="color: white;">Optimize Today,</span>{" "}
                  <span class="text-blue-400">Perform Tomorrow</span>
                </h1>
                {slide.tagline && (
                  <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-6">
                    <span style="color: white;">Innovative IT Solutions for</span>{" "}
                    <span style="color: white;">Your Digital Transformation</span>
                  </h2>
                )}
              </>
            ) : (
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6" style="color: white;">
                {slide.title}
              </h1>
            )}
            <p class="text-lg md:text-xl mb-8 text-blue-100 max-w-3xl mx-auto leading-relaxed">
              {slide.subtitle}
            </p>
          </div>
        ))}

        <!-- Invisible placeholder for height -->
        <div class="invisible">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-4 whitespace-nowrap">
            <span style="color: white;">Optimize Today,</span>{" "}
            <span class="text-blue-400">Perform Tomorrow</span>
          </h1>
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-6">
            <span style="color: white;">Innovative IT Solutions for</span>{" "}
            <span style="color: white;">Your Digital Transformation</span>
          </h2>
          <p class="text-lg md:text-xl mb-8 text-blue-100 max-w-3xl mx-auto leading-relaxed">
            {heroSlides[0].subtitle}
          </p>
        </div>
      </div>

      {showCTA && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/services"
            class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-700 hover:to-blue-900 text-white px-10 py-5 text-lg font-semibold rounded-xl shadow-2xl hover:shadow-blue-500/50 transition-all"
          >
            Discover Our Services
            <ArrowRight class="w-5 h-5" />
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center gap-2 bg-transparent border-2 border-white text-white hover:bg-white hover:text-blue-900 px-10 py-5 text-lg font-semibold rounded-xl shadow-2xl transition-all"
          >
            Get a Quote
          </a>
        </div>
      )}

      <!-- Slide Indicators -->
      <div class="flex gap-3 justify-center mt-10">
        {heroSlides.map((_, index) => (
          <button
            class={`slide-indicator h-2 rounded-full transition-all duration-300 ${index === 0 ? 'w-12 bg-white' : 'w-6 bg-white/40 hover:bg-white/60'}`}
            data-slide={index}
            aria-label={`Go to slide ${index + 1}`}
          ></button>
        ))}
      </div>
    </div>
  </section>
)}

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    var slides = document.querySelectorAll('.hero-slide');
    var texts = document.querySelectorAll('.hero-text');
    var indicators = document.querySelectorAll('.slide-indicator');

    if (slides.length === 0) return;

    var currentSlide = 0;
    var totalSlides = slides.length;
    var autoplayTimeout = null;
    var SLIDE_DURATION = 7000; // 7 seconds for all slides

    function showSlide(index) {
      // Hide all slides (backgrounds)
      for (var i = 0; i < slides.length; i++) {
        slides[i].classList.remove('opacity-100');
        slides[i].classList.add('opacity-0');
      }

      // Hide all texts
      for (var t = 0; t < texts.length; t++) {
        texts[t].classList.remove('opacity-100');
        texts[t].classList.add('opacity-0', 'pointer-events-none');
      }

      // Update indicators
      for (var j = 0; j < indicators.length; j++) {
        indicators[j].classList.remove('w-12', 'bg-white');
        indicators[j].classList.add('w-6', 'bg-white/40');
      }

      // Show current slide (background)
      slides[index].classList.remove('opacity-0');
      slides[index].classList.add('opacity-100');

      // Show current text
      if (texts[index]) {
        texts[index].classList.remove('opacity-0', 'pointer-events-none');
        texts[index].classList.add('opacity-100');
      }

      // Update current indicator
      if (indicators[index]) {
        indicators[index].classList.remove('w-6', 'bg-white/40');
        indicators[index].classList.add('w-12', 'bg-white');
      }

      currentSlide = index;
    }

    function nextSlide() {
      var next = (currentSlide + 1) % totalSlides;
      showSlide(next);
      scheduleNextSlide();
    }

    function scheduleNextSlide() {
      if (autoplayTimeout) {
        clearTimeout(autoplayTimeout);
      }
      autoplayTimeout = setTimeout(nextSlide, SLIDE_DURATION);
    }

    // Add click handlers to indicators
    for (var k = 0; k < indicators.length; k++) {
      (function(index) {
        indicators[index].addEventListener('click', function() {
          showSlide(index);
          scheduleNextSlide();
        });
      })(k);
    }

    // Start autoplay
    scheduleNextSlide();
  });
</script>
