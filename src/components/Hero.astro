---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  showCTA?: boolean;
  compact?: boolean;
}

const {
  title,
  subtitle = 'Optimize today, perform tomorrow',
  description,
  showCTA = true,
  compact = false
} = Astro.props;
---

<section class:list={[
  'relative overflow-hidden',
  compact ? 'py-16 bg-background-alt' : 'py-20 md:py-28'
]}>
  <!-- Background decoration -->
  {!compact && (
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-primary/5 to-transparent"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-primary/10 rounded-full blur-3xl -translate-x-1/2 translate-y-1/2"></div>
    </div>
  )}

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class:list={[
      'grid gap-12 items-center',
      compact ? '' : 'lg:grid-cols-2'
    ]}>
      <!-- Content -->
      <div class:list={[compact && 'text-center']}>
        <h1 class:list={[
          'font-bold tracking-tight text-text-dark',
          compact ? 'text-3xl md:text-4xl' : 'text-4xl md:text-5xl lg:text-6xl'
        ]}>
          {title}
        </h1>

        {subtitle && (
          <p class:list={[
            'mt-4 text-primary font-medium',
            compact ? 'text-lg' : 'text-xl md:text-2xl'
          ]}>
            {subtitle}
          </p>
        )}

        {description && (
          <p class:list={[
            'mt-6 text-text-gray leading-relaxed',
            compact ? 'text-base max-w-2xl mx-auto' : 'text-lg max-w-xl'
          ]}>
            {description}
          </p>
        )}

        {showCTA && !compact && (
          <div class="mt-8 flex flex-col sm:flex-row gap-4">
            <a
              href="/servicios"
              class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary-dark transition-colors"
            >
              Ver Servicios
            </a>
            <a
              href="#contacto"
              class="inline-flex items-center justify-center px-6 py-3 border-2 border-primary text-primary font-medium rounded-lg hover:bg-primary hover:text-white transition-colors"
            >
              Contactar
            </a>
          </div>
        )}
      </div>

      <!-- Illustration (only for non-compact) -->
      {!compact && (
        <div class="hidden lg:block">
          <div class="relative">
            <!-- Abstract tech illustration placeholder -->
            <div class="aspect-square max-w-md mx-auto">
              <svg viewBox="0 0 400 400" class="w-full h-full" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- Background circle -->
                <circle cx="200" cy="200" r="180" fill="url(#gradient1)" opacity="0.1"/>

                <!-- Server rack -->
                <rect x="140" y="120" width="120" height="160" rx="8" fill="#E5E7EB" stroke="#2563EB" stroke-width="2"/>
                <rect x="150" y="135" width="100" height="25" rx="4" fill="#2563EB"/>
                <rect x="150" y="170" width="100" height="25" rx="4" fill="#3B82F6"/>
                <rect x="150" y="205" width="100" height="25" rx="4" fill="#2563EB"/>
                <rect x="150" y="240" width="100" height="25" rx="4" fill="#3B82F6"/>

                <!-- Indicator lights -->
                <circle cx="160" cy="147" r="4" fill="#22C55E"/>
                <circle cx="160" cy="182" r="4" fill="#22C55E"/>
                <circle cx="160" cy="217" r="4" fill="#22C55E"/>
                <circle cx="160" cy="252" r="4" fill="#22C55E"/>

                <!-- Connection lines -->
                <path d="M260 160 L320 120" stroke="#2563EB" stroke-width="2" stroke-dasharray="5,5"/>
                <path d="M260 200 L340 200" stroke="#2563EB" stroke-width="2" stroke-dasharray="5,5"/>
                <path d="M260 240 L320 280" stroke="#2563EB" stroke-width="2" stroke-dasharray="5,5"/>

                <!-- Network nodes -->
                <circle cx="330" cy="115" r="15" fill="#2563EB"/>
                <circle cx="350" cy="200" r="15" fill="#3B82F6"/>
                <circle cx="330" cy="285" r="15" fill="#2563EB"/>

                <!-- Shield icon (security) -->
                <path d="M80 200 L80 240 Q80 280 120 300 Q160 280 160 240 L160 200 L120 180 Z" fill="#2563EB" opacity="0.2" stroke="#2563EB" stroke-width="2"/>
                <path d="M105 230 L115 240 L135 220" stroke="#2563EB" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>

                <defs>
                  <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#2563EB"/>
                    <stop offset="100%" style="stop-color:#3B82F6"/>
                  </linearGradient>
                </defs>
              </svg>
            </div>
          </div>
        </div>
      )}
    </div>
  </div>
</section>
