---
const partners = [
  { name: "Cisco", logo: "/images/cisco logo.png" },
  { name: "HP", logo: "/images/hp logo.png" },
  { name: "Dell", logo: "/images/dell logo.webp" },
  { name: "Lenovo", logo: "/images/lenevo logo.png" },
  { name: "IBM", logo: "/images/ibm logo.png" },
  { name: "Fortinet", logo: "/images/fortinet logo.webp" },
  { name: "Canon", logo: "/images/canon logo.png" },
  { name: "Epson", logo: "/images/epson logo.png" },
  { name: "Kisan", logo: "/images/kisan logo.webp" },
  { name: "Rapiscan", logo: "/images/rapisacan logo.webp" },
];
---

<section class="py-16 bg-white border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-center text-2xl font-bold text-gray-900 mb-12">
      Our Partners
    </h2>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-8 items-center">
      {partners.map(partner => (
        <div class="flex items-center justify-center p-4 hover:scale-110 transition-all duration-300">
          <img
            src={partner.logo}
            alt={partner.name}
            class="h-12 w-auto object-contain"
          />
        </div>
      ))}
    </div>
  </div>
</section>
